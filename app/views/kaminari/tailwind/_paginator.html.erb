<%= paginator.render do %>
  <nav class="flex items-center justify-between py-3" role="navigation" aria-label="pagination">
    <div class="flex-1 flex justify-between sm:justify-end">
      <% unless current_page.first? %>
        <%= link_to_prev_page @courses, raw('&laquo; Previous'), class: 'relative inline-flex items-center px-4 py-2 mx-1 border border-gray-700 text-sm font-medium rounded-md text-gray-300 bg-gray-800 hover:bg-gray-700 transition-colors' %>
      <% else %>
        <span class="relative inline-flex items-center px-4 py-2 mx-1 border border-gray-700 text-sm font-medium rounded-md text-gray-500 bg-gray-800 cursor-not-allowed">
          &laquo; Previous
        </span>
      <% end %>
      
      <div class="hidden md:flex">
        <% each_page do |page| %>
          <% if page.left_outer? || page.right_outer? || page.inside_window? %>
            <% if page.current? %>
              <span class="relative inline-flex items-center px-4 py-2 mx-1 border border-purple-500 text-sm font-medium rounded-md text-white bg-purple-600 cursor-default">
                <%= page %>
              </span>
            <% else %>
              <%= link_to page, url_for(page: page), class: 'relative inline-flex items-center px-4 py-2 mx-1 border border-gray-700 text-sm font-medium rounded-md text-gray-300 bg-gray-800 hover:bg-gray-700 transition-colors' %>
            <% end %>
          <% elsif !page.was_truncated? %>
            <%= gap_tag %>
          <% end %>
        <% end %>
      </div>

      <% unless current_page.last? %>
        <%= link_to_next_page @courses, raw('Next &raquo;'), class: 'relative inline-flex items-center px-4 py-2 mx-1 border border-gray-700 text-sm font-medium rounded-md text-gray-300 bg-gray-800 hover:bg-gray-700 transition-colors' %>
      <% else %>
        <span class="relative inline-flex items-center px-4 py-2 mx-1 border border-gray-700 text-sm font-medium rounded-md text-gray-500 bg-gray-800 cursor-not-allowed">
          Next &raquo;
        </span>
      <% end %>
    </div>
  </nav>
<% end %>
