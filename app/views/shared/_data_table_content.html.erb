<%= turbo_frame_tag turbo_frame_id do %>
  <div class="p-4 md:p-6" data-controller="icons-loader">
    <div class="overflow-y-auto h-[320px] scrollbar-hide hover:scrollbar-default transition-opacity">
      <table class="w-full">
        <thead class="sticky top-0 bg-gray-900 z-10">
          <tr class="border-b border-gray-800">
            <% if defined?(selectable) && selectable == true %>
              <th class="text-center py-3 px-2 w-10">
                <input type="checkbox" data-data-table-target="mainCheckbox" data-action="change->data-table#toggleAll" class="rounded border-gray-600 bg-gray-800 text-purple-600 focus:ring-purple-500">
              </th>
            <% end %>

            <% columns.each do |column| %>
              <% next if column[:key] == "actions" %> <%# Bỏ qua cột actions trong columns %>
              <th class="py-3 px-4 text-gray-400 font-medium <%= column[:align] == 'right' ? 'text-right' : 'text-left' %>">
                <%= column[:label] %>
              </th>
            <% end %>

            <%# Luôn render header cho cột actions %>
            <th class="text-right py-3 px-4 text-gray-400 font-medium">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if collection.any? %>
            <% collection.each do |item| %>
              <% # Truyền thêm thuộc tính ensure_actions để đảm bảo luôn hiển thị nút actions %>
              <%= render partial: content_partial_path, object: item, locals: {
                columns: columns,
                selectable: defined?(selectable) ? selectable : false,
                ensure_actions: true
              } %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="<%= columns.size + (defined?(selectable) && selectable ? 1 : 0) %>" class="py-10 text-center text-gray-400">
                <i data-lucide="book-open" class="mx-auto h-12 w-12 text-gray-600 mb-4"></i>
                <p><%= empty_message || 'Không tìm thấy dữ liệu' %></p>
                <% if defined?(empty_guidance) && empty_guidance.present? %>
                  <p class="mt-2 text-sm"><%= empty_guidance %></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-4 mb-2 border-t border-gray-700 pt-4">
      <div class="text-sm text-white flex items-center">
        <span class="mr-2">Hiển thị:</span>
        <%= form_with url: url_for(request.query_parameters), method: :get, data: { turbo_frame: turbo_frame_id } do |f| %>
          <%= f.hidden_field :page, value: 1 %>
          <% request.query_parameters.except(:page, :per_page, :authenticity_token).each do |key, value| %>
            <%= f.hidden_field key, value: value %>
          <% end %>
          <%= f.select :per_page,
              options_for_select([10, 25, 50, 100], params[:per_page].to_i > 0 ? params[:per_page].to_i : 10),
              {},
              {
                class: "bg-gray-800 border border-gray-700 rounded text-white px-2 py-1",
                onchange: "this.form.requestSubmit()"
              }
          %>
        <% end %>
      </div>

      <% if defined?(selectable) && selectable == true %>
        <div data-data-table-target="bulkActionsPanel" class="hidden">
          <div class="flex items-center gap-2">
            <span class="text-white text-sm">
              <span data-data-table-target="selectedCount">0</span> mục đã chọn
            </span>
            <button type="button" data-action="data-table#bulkDelete" class="flex items-center px-3 py-1.5 bg-red-600/20 hover:bg-red-600/30 text-red-400 rounded transition-colors">
              <i data-lucide="trash-2" class="h-4 w-4 mr-1"></i>
              Xóa
            </button>
            <button type="button" data-action="data-table#bulkPublish" class="flex items-center px-3 py-1.5 bg-green-600/20 hover:bg-green-600/30 text-green-400 rounded transition-colors">
              <i data-lucide="check" class="h-4 w-4 mr-1"></i>
              Xuất bản
            </button>
            <button type="button" data-action="data-table#bulkDraft" class="flex items-center px-3 py-1.5 bg-yellow-600/20 hover:bg-yellow-600/30 text-yellow-400 rounded transition-colors">
              <i data-lucide="edit" class="h-4 w-4 mr-1"></i>
              Bản nháp
            </button>
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-2 gap-4">
      <div class="text-sm text-gray-400">
        <% if collection.respond_to?(:total_count) && collection.total_count > 0 %>
          Hiển thị <%= collection.offset_value + 1 %>-<%= [collection.offset_value + collection.limit_value, collection.total_count].min %> trong số <%= collection.total_count %> <%= pagination_label || 'bản ghi' %>
        <% else %>
          0 <%= pagination_label || 'bản ghi' %>
        <% end %>
      </div>
      <div class="flex items-center space-x-1">
        <div class="flex items-center gap-1">
          <% if collection.respond_to?(:current_page) && collection.current_page > 2 %>
            <%= link_to url_for(request.params.merge(page: 1)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: { turbo_frame: turbo_frame_id } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m11 17-5-5 5-5"/>
                <path d="m18 17-5-5 5-5"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m11 17-5-5 5-5"/>
                <path d="m18 17-5-5 5-5"/>
              </svg>
            </span>
          <% end %>

          <% if collection.respond_to?(:prev_page) && collection.prev_page %>
            <%= link_to url_for(request.params.merge(page: collection.prev_page)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: { turbo_frame: turbo_frame_id } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m15 18-6-6 6-6"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m15 18-6-6 6-6"/>
              </svg>
            </span>
          <% end %>

          <% if collection.respond_to?(:total_pages) && collection.total_pages > 0 %>
            <% start_page = [1, collection.current_page - 2].max %>
            <% end_page = [collection.total_pages, collection.current_page + 2].min %>

            <% (start_page..end_page).each do |page| %>
              <% if page == collection.current_page %>
                <span class="flex items-center justify-center w-9 h-9 rounded-md border border-purple-700 bg-purple-700/30 text-white font-medium">
                  <%= page %>
                </span>
              <% else %>
                <%= link_to page, url_for(request.params.merge(page: page)),
                    class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors",
                    data: { turbo_frame: turbo_frame_id } %>
              <% end %>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-purple-700 bg-purple-700/30 text-white font-medium">
              1
            </span>
          <% end %>

          <% if collection.respond_to?(:next_page) && collection.next_page %>
            <%= link_to url_for(request.params.merge(page: collection.next_page)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: { turbo_frame: turbo_frame_id } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            </span>
          <% end %>

          <% if collection.respond_to?(:total_pages) && collection.respond_to?(:current_page) && collection.current_page < collection.total_pages - 1 %>
            <%= link_to url_for(request.params.merge(page: collection.total_pages)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: { turbo_frame: turbo_frame_id } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m13 17 5-5-5-5"/>
                <path d="m6 17 5-5-5-5"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m13 17 5-5-5-5"/>
                <path d="m6 17 5-5-5-5"/>
              </svg>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Script để tải lại các icon Lucide sau khi nội dung được cập nhật qua Turbo %>
  <script>
    document.addEventListener("turbo:load", function() {
      if (window.lucide) {
        window.lucide.createIcons();
      }
    });

    document.addEventListener("turbo:frame-load", function() {
      if (window.lucide) {
        window.lucide.createIcons();
      }
    });
  </script>
<% end %>
