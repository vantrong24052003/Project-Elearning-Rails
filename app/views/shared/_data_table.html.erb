<% if defined?(filters) && filters.present? %>
  <div class="mb-4 border-b border-gray-700">
    <div class="bg-gray-800 rounded-lg p-5 shadow-md">
      <%= form_with url: filters[:url], method: :get, id: "search_filter_form", data: { turbo_frame: filters[:turbo_frame] || turbo_frame_id || "data_table_content" } do |f| %>
        <div class="space-y-5">
          <div class="flex flex-col lg:flex-row gap-4 items-center ">
            <div class="w-full lg:flex-1">
              <div class="relative group">
                <%= f.text_field :search, value: params[:search],
                    class: "w-full bg-gray-700 border border-gray-600 rounded-lg py-2.5 pl-10 pr-12 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300",
                    placeholder: filters[:search_placeholder] || "Tìm kiếm...",
                    autocomplete: "off"
                %>
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
                <div class="absolute inset-y-0 right-0 flex items-center">
                  <% if params[:search].present? %>
                    <%= link_to filters[:url], class: "text-gray-400 hover:text-white px-2 transition-colors duration-200", data: { turbo_frame: filters[:turbo_frame] || turbo_frame_id || "data_table_content" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    <% end %>
                  <% end %>
                  <button type="submit" class="h-full px-3 text-gray-400 hover:text-white focus:outline-none transition-colors duration-200 border-l border-gray-600">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>

            <div class="flex flex-wrap gap-3 items-center  w-full md:w-auto">
              <% if filters[:status_options].present? %>
                <div class="w-full md:w-auto">
                  <%= f.select :status, filters[:status_options],
                      { selected: params[:status] },
                      {
                        class: "w-full bg-gray-700 border border-gray-600 rounded-md py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-500 transition-colors duration-200",
                        onchange: "this.form.requestSubmit()"
                      }
                  %>
                </div>
              <% end %>

              <% if filters[:categories].present? %>
                <div class="w-full md:w-auto">
                  <%= f.select :category_id,
                      filters[:categories].collect { |c| [c.name, c.id] },
                      { include_blank: 'All Category', selected: params[:category_id] },
                      {
                        class: "w-full bg-gray-700 border border-gray-600 rounded-md py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-purple-500 transition-colors duration-200",
                        onchange: "this.form.requestSubmit()"
                      }
                  %>
                </div>
              <% end %>

              <% if filters[:custom_filters].present? %>
                <div class="w-full md:w-auto">
                  <%= filters[:custom_filters].call(f) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


  <div class="bg-gray-900 border border-gray-700 shadow-xl rounded-lg" data-controller="data-table">
    <div class="p-4 md:p-6 border-b border-gray-700">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
        <div>
          <h2 class="text-lg md:text-xl text-purple-400 font-medium"><%= title %></h2>
          <% if defined?(subtitle) && subtitle.present? %>
          <p class="text-sm text-gray-400"><%= subtitle %></p>
          <% end %>
        </div>

        <% if defined?(header_actions) %>
        <div class="flex items-center gap-2">
          <%= header_actions %>
        </div>
        <% end %>
      </div>
    </div>

    <%= turbo_frame_tag turbo_frame_id || "data_table_content" do %>
    <%= render 'shared/data_table_content',
      columns: columns,
      collection: collection,
      content_partial_path: content_partial_path || "item",
      selectable: defined?(selectable) ? selectable : false,
      empty_message: defined?(empty_message) ? empty_message : nil,
      empty_guidance: defined?(empty_guidance) ? empty_guidance : nil,
      pagination_label: defined?(pagination_label) ? pagination_label : nil,
      turbo_frame_id: turbo_frame_id || "data_table_content"
    %>
    <% end %>
  </div>
