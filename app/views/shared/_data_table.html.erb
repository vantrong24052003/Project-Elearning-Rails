<div class="bg-gray-900 border border-gray-700 shadow-xl rounded-lg" data-controller="data-table">
  <div class="p-4 md:p-6 border-b border-gray-700">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
      <div>
        <h2 class="text-lg md:text-xl text-purple-400 font-medium"><%= title %></h2>
        <% if defined?(subtitle) && subtitle.present? %>
          <p class="text-sm text-gray-400"><%= subtitle %></p>
        <% end %>
      </div>

      <% if defined?(header_actions) %>
        <div class="flex items-center gap-2">
          <%= header_actions %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="p-4 md:p-6">
    <div class="overflow-x-auto overflow-y-auto h-[320px]">
      <table class="w-full">
        <thead class="sticky top-0 bg-gray-900 z-10">
          <tr class="border-b border-gray-800">
            <% if defined?(selectable) && selectable == true %>
              <th class="text-left py-3 px-4">
                <input type="checkbox" data-data-table-target="mainCheckbox" data-action="change->data-table#toggleAll" class="rounded border-gray-600 bg-gray-800 text-purple-600 focus:ring-purple-500">
              </th>
            <% end %>

            <% columns.each do |column| %>
              <% next if column[:label] == "Hành động" %>
              <th class="text-left py-3 px-4 text-gray-400 font-medium<%= column[:align] == 'right' ? ' text-right' : '' %>">
                <%= column[:label] %>
              </th>
            <% end %>
            <th class="text-right py-3 px-4 text-gray-400 font-medium">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% if collection.any? %>
            <%= content %>
          <% else %>
            <tr>
              <td colspan="<%= columns.reject { |c| c[:label] == "Hành động" }.size + 1 + (defined?(selectable) && selectable ? 1 : 0) %>" class="py-10 text-center text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-600 mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
                <p><%= empty_message || 'Không tìm thấy dữ liệu' %></p>
                <% if defined?(empty_guidance) && empty_guidance.present? %>
                  <p class="mt-2 text-sm"><%= empty_guidance %></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-4 mb-2 border-t border-gray-700 pt-4">
      <div class="text-sm text-white flex items-center">
        <span class="mr-2">Hiển thị:</span>
        <select class="bg-gray-800 border border-gray-700 rounded text-white px-2 py-1"
                data-action="change->data-table#changeLimit">
          <% [10, 25, 50, 100].each do |limit| %>
            <option value="<%= limit %>" <%= (params[:per_page].to_i == limit || (params[:per_page].blank? && limit == 10)) ? 'selected' : '' %>>
              <%= limit %> bản ghi
            </option>
          <% end %>
        </select>
      </div>

      <div data-data-table-target="bulkActionsPanel" class="hidden">
        <div class="flex items-center gap-2">
          <span class="text-white text-sm">
            <span data-data-table-target="selectedCount">0</span> mục đã chọn
          </span>
          <button type="button" data-action="data-table#bulkDelete" class="flex items-center px-3 py-1.5 bg-red-600/20 hover:bg-red-600/30 text-red-400 rounded transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 6h18" />
              <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
              <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
            </svg>
            Xóa
          </button>
          <button type="button" data-action="data-table#bulkPublish" class="flex items-center px-3 py-1.5 bg-green-600/20 hover:bg-green-600/30 text-green-400 rounded transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            Xuất bản
          </button>
          <button type="button" data-action="data-table#bulkDraft" class="flex items-center px-3 py-1.5 bg-yellow-600/20 hover:bg-yellow-600/30 text-yellow-400 rounded transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
              <path d="M18.5 2.5a2.12 2.12 0 0 1 3 3L12 15l-4 1 1-4Z"/>
            </svg>
            Bản nháp
          </button>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-2 gap-4">
      <div class="text-sm text-gray-400">
        <% if collection.respond_to?(:total_count) && collection.total_count > 0 %>
          Hiển thị <%= collection.offset_value + 1 %>-<%= [collection.offset_value + collection.limit_value, collection.total_count].min %> trong số <%= collection.total_count %> <%= pagination_label || 'bản ghi' %>
        <% else %>
          0 <%= pagination_label || 'bản ghi' %>
        <% end %>
      </div>
      <div class="flex items-center space-x-1">
        <div class="flex items-center gap-1">
          <% if collection.respond_to?(:current_page) && collection.current_page > 2 %>
            <%= link_to url_for(request.params.merge(page: 1)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: pagination_data do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m11 17-5-5 5-5"/>
                <path d="m18 17-5-5 5-5"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m11 17-5-5 5-5"/>
                <path d="m18 17-5-5 5-5"/>
              </svg>
            </span>
          <% end %>

          <% if collection.respond_to?(:prev_page) && collection.prev_page %>
            <%= link_to url_for(request.params.merge(page: collection.prev_page)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: pagination_data do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m15 18-6-6 6-6"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m15 18-6-6 6-6"/>
              </svg>
            </span>
          <% end %>

          <% if collection.respond_to?(:total_pages) && collection.total_pages > 0 %>
            <% start_page = [1, collection.current_page - 2].max %>
            <% end_page = [collection.total_pages, collection.current_page + 2].min %>

            <% (start_page..end_page).each do |page| %>
              <% if page == collection.current_page %>
                <span class="flex items-center justify-center w-9 h-9 rounded-md border border-purple-700 bg-purple-700/30 text-white font-medium">
                  <%= page %>
                </span>
              <% else %>
                <%= link_to page, url_for(request.params.merge(page: page)),
                    class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors",
                    data: pagination_data %>
              <% end %>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-purple-700 bg-purple-700/30 text-white font-medium">
              1
            </span>
          <% end %>

          <% if collection.respond_to?(:next_page) && collection.next_page %>
            <%= link_to url_for(request.params.merge(page: collection.next_page)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: pagination_data do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            </span>
          <% end %>

          <% if collection.respond_to?(:total_pages) && collection.respond_to?(:current_page) && collection.current_page < collection.total_pages - 1 %>
            <%= link_to url_for(request.params.merge(page: collection.total_pages)), class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors", data: pagination_data do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m13 17 5-5-5-5"/>
                <path d="m6 17 5-5-5-5"/>
              </svg>
            <% end %>
          <% else %>
            <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-700 bg-gray-900 text-gray-600 cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m13 17 5-5-5-5"/>
                <path d="m6 17 5-5-5-5"/>
              </svg>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="detailModal" class="hidden fixed inset-0 bg-black/75 z-50 flex items-center justify-center p-4">
  <div class="bg-gray-900 border border-gray-700 rounded-xl shadow-xl max-w-2xl w-full max-h-[90vh] overflow-auto">
    <div class="p-4 sm:p-6 border-b border-gray-700 flex items-center justify-between">
      <h3 class="text-xl font-semibold text-white" id="modalTitle">Chi tiết</h3>
      <button type="button" data-action="data-table#closeModal" class="text-gray-400 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="p-4 sm:p-6">
      <div id="modalContent" class="space-y-4">
      </div>
    </div>
    <div class="p-4 sm:p-6 border-t border-gray-700 flex justify-end">
      <button type="button" data-action="data-table#closeModal" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-md transition-colors">
        Đóng
      </button>
    </div>
  </div>
</div>
