<%# app/views/home/_newsletter.html.erb %>

<section class="py-24 dark:bg-gradient-to-r dark:from-purple-900 dark:via-indigo-900 dark:to-blue-900 bg-gray-100">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-6">Stay Updated with ELearn</h2>
    <p class="text-lg mb-8 max-w-2xl mx-auto">
      Subscribe to our newsletter for the latest course updates, learning tips, and exclusive offers.
    </p>
    <%= form_with url: "/subscribe", method: :post, class: "max-w-md mx-auto flex flex-col sm:flex-row gap-4" do |f| %>
    <%= f.email_field :email, placeholder: "Enter your email", class: "flex-grow px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
    <%= f.submit "Subscribe", class: "bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-md" %>
    <% end %>
  </div>
</section>
