<section class="py-24 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Why Choose ELearn?</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <% features = [
        {
          icon: 'lightbulb',
          title: 'Expert-Led Courses',
          description: 'Learn from industry professionals and renowned academics.'
        },
        {
          icon: 'clock',
          title: 'Flexible Learning',
          description: 'Study at your own pace, anytime and anywhere.'
        },
        {
          icon: 'shield-check',
          title: 'Recognized Certificates',
          description: 'Earn certificates valued by top employers worldwide.'
        },
        {
          icon: 'users',
          title: 'Community Support',
          description: 'Join a global community of learners and educators.'
        }
      ] %>

      <% features.each do |feature| %>
      <div class="bg-white dark:bg-gray-700 hover:shadow-lg transition-shadow duration-300 rounded-lg p-6">
        <div class="p-4">
          <% case feature[:icon]
               when 'lightbulb' %>
          <svg class="h-12 w-12 text-purple-500 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
          <% when 'clock' %>
          <svg class="h-12 w-12 text-purple-500 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <% when 'shield-check' %>
          <svg class="h-12 w-12 text-purple-500 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <% when 'users' %>
          <svg class="h-12 w-12 text-purple-500 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <% end %>
          <h3 class="text-xl font-bold mb-2"><%= feature[:title] %></h3>
          <p class="text-gray-600 dark:text-gray-300"><%= feature[:description] %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
