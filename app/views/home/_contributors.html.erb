<%# app/views/home/_contributors.html.erb %>

<section class="py-16 bg-white dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Our Contributors</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
      <% 6.times do |i| %>
      <div class="flex flex-col items-center">
        <div class="w-24 h-24 rounded-full overflow-hidden mb-4">
          <%= image_tag "https://randomuser.me/api/portraits/men/#{i + 1}.jpg", alt: "Contributor #{i+1}", class: "w-full h-full object-cover" %>
        </div>
        <h3 class="font-semibold text-lg"><%= ["John Doe", "Jane Smith", "Robert Johnson", "Emily Davis", "Michael Wilson", "Sarah Brown"][i] %></h3>
        <p class="text-gray-600 dark:text-gray-400"><%= ["Web Development", "Data Science", "UI/UX Design", "Mobile Development", "Machine Learning", "Digital Marketing"][i] %></p>
      </div>
      <% end %>
    </div>
  </div>
</section>
