<div class="container mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col gap-4">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Quản lý bài kiểm tra</h1>
      
      <%= link_to new_manage_quiz_path, class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 5v14M5 12h14"/>
        </svg>
        Tạo bài kiểm tra mới
      <% end %>
    </div>

    <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-xl rounded-lg">
      <div class="p-4 md:p-6 border-b border-gray-200 dark:border-gray-700">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
          <div>
            <h2 class="text-lg md:text-xl text-blue-600 dark:text-purple-400 font-medium">Danh sách bài kiểm tra</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">Quản lý tất cả các bài kiểm tra trong hệ thống</p>
          </div>
          
          <div class="flex items-center gap-2">
            <%= link_to new_manage_quiz_path(ai: true), class: "btn btn-outline btn-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 2a10 10 0 1 0 10 10H12V2Z"></path>
                <path d="M12 2a10 10 0 0 1 10 10h-10V2Z"></path>
                <path d="M12 12 2 12"></path>
              </svg>
              Tạo với AI
            <% end %>
          </div>
        </div>
      </div>

      <%= turbo_frame_tag "quizzes_data" do %>
        <div class="p-4 md:p-6">
          <div class="overflow-x-auto overflow-y-auto max-h-[70vh]">
            <table class="table table-zebra w-full">
              <thead class="sticky top-0 bg-gray-50 dark:bg-gray-800 z-10">
                <tr>
                  <th class="text-left">STT</th>
                  <th class="text-left">Tiêu đề</th>
                  <th class="text-left">Khóa học</th>
                  <th class="text-left">Loại</th>
                  <th class="text-left">Thời gian</th>
                  <th class="text-left">Số câu hỏi</th>
                  <th class="text-right">Thao tác</th>
                </tr>
              </thead>

              <tbody>
                <% if @quizzes&.any? %>
                  <% @quizzes.each_with_index do |quiz, index| %>
                    <tr class="border-b border-gray-200 dark:border-gray-800 hover:bg-gray-100 dark:hover:bg-gray-800/50">
                      <td class="py-3 px-4">
                        <div class="flex items-center">
                          <%= (@quizzes.offset_value || 0) + index + 1 %>
                        </div>
                      </td>

                      <td class="py-3 px-4">
                        <div class="flex items-center">
                          <div>
                            <p class="font-medium text-gray-800 dark:text-white"><%= quiz.title %></p>
                          </div>
                        </div>
                      </td>

                      <td class="py-3 px-4">
                        <% if quiz.course.present? %>
                          <span class="text-gray-800 dark:text-white"><%= quiz.course.title %></span>
                        <% else %>
                          <span class="text-gray-500 dark:text-gray-400">--</span>
                        <% end %>
                      </td>

                      <td class="py-3 px-4">
                        <span class="inline-block px-2 py-1 text-xs font-medium rounded-full
                              <%= quiz.is_exam ? 
                                'bg-red-100 text-red-600 border border-red-200 dark:bg-red-600/20 dark:text-red-400 dark:border-red-600/30' : 
                                'bg-green-100 text-green-600 border border-green-200 dark:bg-green-600/20 dark:text-green-400 dark:border-green-600/30' %>">
                          <%= quiz.is_exam ? 'Bài thi' : 'Bài tập' %>
                        </span>
                      </td>

                      <td class="py-3 px-4">
                        <span class="text-gray-800 dark:text-white"><%= quiz.time_limit %> phút</span>
                      </td>

                      <td class="py-3 px-4">
                        <span class="text-gray-800 dark:text-white"><%= quiz.questions.count %> câu</span>
                      </td>

                      <td class="py-3 px-4 text-right">
                        <div class="flex items-center justify-end gap-2">
                          <%= link_to manage_quiz_path(quiz), class: "btn btn-sm btn-ghost tooltip tooltip-left", data: { tip: "Xem chi tiết" } do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                              <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                          <% end %>

                          <%= link_to edit_manage_quiz_path(quiz), class: "btn btn-sm btn-ghost tooltip tooltip-left", data: { tip: "Chỉnh sửa" } do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                            </svg>
                          <% end %>

                          <%= button_to manage_quiz_path(quiz), method: :delete, class: "btn btn-sm btn-ghost text-red-500", data: { turbo_confirm: "Bạn có chắc chắn muốn xóa bài kiểm tra này không?" } do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <polyline points="3 6 5 6 21 6"></polyline>
                              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                              <line x1="10" y1="11" x2="10" y2="17"></line>
                              <line x1="14" y1="11" x2="14" y2="17"></line>
                            </svg>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="7" class="py-10 text-center text-gray-500 dark:text-gray-400">
                      <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 01-2-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                      <p>Không tìm thấy bài kiểm tra nào</p>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <%= render partial: 'shared/pagination',
                  locals: {
                    collection: @quizzes,
                    pagination_label: 'bài kiểm tra',
                    turbo_frame_id: 'quizzes_data'
                  } if @quizzes&.any? %>
        </div>
      <% end %>
    </div>
  </div>
</div>
