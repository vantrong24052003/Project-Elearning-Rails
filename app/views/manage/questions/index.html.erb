<div class="container mx-auto py-6 px-4 sm:px-6 lg:px-8" data-controller="manage--questions">
  <div class="flex flex-col gap-4">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Ngân Hàng Câu Hỏi</h1>
    </div>

    <input type="hidden" data-manage--questions-target="selectedQuestionsInput" value="[]">
    <div class="mb-4 border-b border-gray-200 dark:border-gray-700">
      <div class="rounded-lg p-5 bg-white dark:bg-gray-800 text-gray-800 dark:text-white">
        <%= form_with(url: manage_questions_path, method: :get, id: "search_filter_form", data: {
          turbo_frame: "questions_data",
          "manage--questions-target": "searchForm"
        }) do |f| %>
          <div class="space-y-5">
            <div class="flex flex-col lg:flex-row gap-4 items-center">
              <div class="w-full lg:flex-1">
                <div class="relative group">
                  <%= f.text_field :search, value: params[:search],
                          class: "w-full bg-gray-50 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg py-2.5 pl-10 pr-12 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-purple-500 focus:border-blue-500 dark:focus:border-purple-500 transition-all",
                          placeholder: "Tìm kiếm câu hỏi...",
                          autocomplete: "off",
                          data: {
                            "manage--questions-target": "searchInput",
                            action: "input->manage--questions#search"
                          }
                      %>
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-4 w-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                  </div>
                  <div class="absolute inset-y-0 right-0 flex items-center">
                    <% if params[:search].present? %>
                      <button type="button" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-white px-2" data-action="manage--questions#clearSearch">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </button>
                    <% end %>
                    <button type="submit" class="h-full px-3 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-white focus:outline-none border-l border-gray-300 dark:border-gray-600">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>

              <div class="flex flex-wrap gap-3 items-center w-full md:w-auto">
                <div class="w-full md:w-auto">
                  <%= f.select :course_id,
                          options_for_select([["Tất cả khóa học", ""]] + @courses.map { |c| [c.title, c.id] }, params[:course_id]),
                          {},
                          {
                            class: "select select-bordered w-full bg-gray-50 dark:bg-gray-700",
                            data: {
                              "manage--questions-target": "courseSelect",
                              action: "change->manage--questions#filterByCourse"
                            }
                          }
                      %>
                </div>

                <div class="w-full md:w-auto">
                  <%= f.select :difficulty,
                            [["Tất cả độ khó", ""], ["Dễ", "easy"], ["Trung bình", "medium"], ["Khó", "hard"]],
                            { selected: params[:difficulty] },
                            {
                              class: "select select-bordered w-full bg-gray-50 dark:bg-gray-700",
                              data: {
                                "manage--questions-target": "difficultySelect",
                                action: "change->manage--questions#filterByDifficulty"
                              }
                            }
                        %>
                </div>

                <div class="w-full md:w-auto">
                  <%= f.select :topic,
                           [["Tất cả chủ đề", ""],
                            ["Toán học", "math"],
                            ["Vật lý", "physics"],
                            ["Hóa học", "chemistry"],
                            ["Sinh học", "biology"],
                            ["Lịch sử", "history"],
                            ["Địa lý", "geography"],
                            ["Văn học", "literature"],
                            ["Lập trình", "programming"],
                            ["Khác", "other"]],
                          { selected: params[:topic] },
                          {
                            class: "select select-bordered w-full bg-gray-50 dark:bg-gray-700",
                            data: {
                              "manage--questions-target": "topicSelect",
                              action: "change->manage--questions#filterByTopic"
                            }
                          }
                      %>
                </div>

                <div class="w-full md:w-auto">
                  <%= f.select :learning_goal,
                           [["Tất cả mục tiêu học tập", ""],
                            ["Ghi nhớ", "remember"],
                            ["Hiểu", "understand"],
                            ["Áp dụng", "apply"],
                            ["Phân tích", "analyze"],
                            ["Sáng tạo", "create"],
                            ["Khác", "other"]],
                          { selected: params[:learning_goal] },
                          {
                            class: "select select-bordered w-full bg-gray-50 dark:bg-gray-700",
                            data: {
                              "manage--questions-target": "learningGoalSelect",
                              action: "change->manage--questions#filterByLearningGoal"
                            }
                          }
                      %>
                </div>

                <div class="w-full md:w-auto">
                  <%= f.select :status,
                           [["Tất cả trạng thái", ""],
                            ["Đang hoạt động", "active"],
                            ["Không hoạt động", "inactive"],
                            ["Đã loại bỏ", "deprecated"]],
                          { selected: params[:status] },
                          {
                            class: "select select-bordered w-full bg-gray-50 dark:bg-gray-700",
                            data: {
                              "manage--questions-target": "statusSelect",
                              action: "change->manage--questions#filterByStatus"
                            }
                          }
                      %>
                </div>

                <div class="w-full md:w-auto">
                  <button type="button"
                          class="w-full rounded-md hover:opacity-70 bg-gray-50 dark:bg-gray-700 flex items-center justify-center h-10 px-4"
                          data-action="manage--questions#resetAllFilters">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="1 4 1 10 7 10"></polyline>
                      <polyline points="23 20 23 14 17 14"></polyline>
                      <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path>
                    </svg>
                    Xóa bộ lọc
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= turbo_frame_tag "questions_data" do %>
    <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-xl rounded-lg">
      <div class="p-4 md:p-6 border-b border-gray-200 dark:border-gray-700">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
          <div>
            <h2 class="text-lg md:text-xl text-blue-600 dark:text-purple-400 font-medium">Danh sách câu hỏi</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">Quản lý và tổ chức các câu hỏi theo chủ đề, mục tiêu và độ khó</p>
          </div>

          <div class="flex items-center gap-2">
            <button
              id="create-quiz-btn"
              class="btn btn-secondary btn-sm"
              data-manage--questions-target="createQuizBtn"
              data-action="manage--questions#createQuiz">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 01-2-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Tạo bài kiểm tra
            </button>

            <%= link_to new_manage_question_path, class: "btn btn-primary btn-sm", data: { turbo: false } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 5v14M5 12h14"/>
              </svg>
              Thêm câu hỏi
            <% end %>
          </div>
        </div>
      </div>

      <div class="p-4 md:p-6">
        <div class="overflow-x-auto overflow-y-auto max-h-[70vh]">
          <% if @questions.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
              <% @questions.each do |question| %>
                <div class="card bg-base-100 border border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg transition-shadow">
                  <div class="card-body p-4">
                    <div class="flex justify-between items-start">
                      <div class="flex gap-2 mb-2">
                        <span class="badge badge-<%= question.difficulty == 'easy' ? 'success' : (question.difficulty == 'medium' ? 'warning' : 'error') %>">
                          <%= question.difficulty %>
                        </span>
                        <span class="badge badge-primary"><%= question.topic %></span>
                        <span class="badge badge-secondary"><%= question.learning_goal %></span>
                      </div>
                      <div class="flex-shrink-0">
                        <input type="checkbox" class="checkbox checkbox-primary question-checkbox" data-question-id="<%= question.id %>" data-action="change->manage--questions#toggleQuestionSelection">
                      </div>
                    </div>

                    <h3 class="card-title text-base font-medium text-gray-900 dark:text-white line-clamp-2">
                      <%= truncate(question.content, length: 100) %>
                    </h3>

                    <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">
                      <p class="mb-1"><strong>Khóa học:</strong> <%= question.course&.title || "Không có khóa học" %></p>
                      <p class="mb-1"><strong>Đáp án đúng:</strong>
                        <% if question.options.is_a?(Hash) && question.correct_option.present? %>
                          <%= question.options[question.correct_option.to_s] || "Tùy chọn #{question.correct_option}" %>
                        <% else %>
                          <%= question.correct_option.present? ? "Tùy chọn #{question.correct_option}" : "Không có đáp án" %>
                        <% end %>
                      </p>
                      <div class="flex items-center gap-2 mt-2">
                        <% status_color = case question.status
                           when 'active' then 'success'
                           when 'inactive' then 'warning'
                           when 'deprecated' then 'error'
                           else 'neutral'
                           end %>
                        <span class="badge badge-sm badge-<%= status_color %>">
                          <%= question.status == 'active' ? 'Đang hoạt động' : (question.status == 'inactive' ? 'Không hoạt động' : 'Đã loại bỏ') %>
                        </span>
                        <% if question.valid_until.present? %>
                          <% if question.valid_until < Date.today %>
                            <span class="badge badge-sm badge-error">Hết hạn <%= question.valid_until.strftime("%d/%m/%Y") %></span>
                          <% elsif question.valid_until < Date.today + 30.days %>
                            <span class="badge badge-sm badge-warning">Hết hạn <%= question.valid_until.strftime("%d/%m/%Y") %></span>
                          <% else %>
                            <span class="badge badge-sm badge-info">Hết hạn <%= question.valid_until.strftime("%d/%m/%Y") %></span>
                          <% end %>
                        <% end %>
                      </div>
                    </div>

                    <div class="card-actions justify-end mt-3">
                      <%= link_to manage_question_path(question), class: "btn btn-sm btn-outline", data: { turbo: false } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                          <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                        Xem
                      <% end %>
                      
                      <%= link_to edit_manage_question_path(question), class: "btn btn-sm btn-outline", data: { turbo: false } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                        </svg>
                        Sửa
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="mt-6">
              <%= render partial: 'shared/pagination',
                locals: {
                  collection: @questions,
                  pagination_label: 'question',
                  turbo_frame_id: "questions_data"
                } %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h3 class="mt-2 text-lg font-medium text-gray-900 dark:text-white">Không tìm thấy câu hỏi</h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Không có câu hỏi nào phù hợp với điều kiện tìm kiếm hoặc bộ lọc của bạn.</p>
              <div class="mt-6">
                <%= link_to new_manage_question_path, class: "btn btn-primary", data: { turbo: false } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 5v14M5 12h14"/>
                  </svg>
                  Thêm câu hỏi mới
                <% end %>
                <button type="button" class="btn btn-outline ml-2" data-action="manage--questions#resetAllFilters">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="1 4 1 10 7 10"></polyline>
                    <polyline points="23 20 23 14 17 14"></polyline>
                    <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path>
                  </svg>
                  Xóa bộ lọc
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
