                <tr class="text-gray-700 dark:text-gray-300 hover:bg-blue-50 dark:hover:bg-gray-800 ">
                  <td class="py-3"><%= enrollment.user.name %></td>
                  <td class="py-3"><%= enrollment.course.title %></td>
                  <td class="py-3">
                    <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= enrollment.status == :active ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= enrollment.status %>
                    </div>
                  </td>
                  <td class="py-3"><%= l enrollment.enrolled_at, format: :short %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>

</div>
