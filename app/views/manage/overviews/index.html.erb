<%= turbo_frame_tag "overview" do %>
  <div class="container mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col gap-4">
      <!-- Header -->
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
          <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Dashboard</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400">Tổng quan về hoạt động giảng dạy của bạn</p>
        </div>
      </div>

      <!-- Course Filter -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4" data-controller="manage--overview">
        <%= form_tag manage_overviews_path, method: :get, class: "flex flex-col sm:flex-row gap-4",
            data: {
              turbo_frame: "overview",
              manage__overview_target: "form"
            } do %>
          <div class="flex-1">
            <%= select_tag :course_id,
                options_for_select([['Tất cả khóa học', '']] + @courses.map { |c| [c.title, c.id] }, @selected_course_id),
                class: "select select-bordered w-full bg-white dark:bg-gray-700 text-gray-900 dark:text-white border-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-400 focus:ring focus:ring-blue-200 dark:focus:ring-blue-800",
                data: {
                  manage__overview_target: "select",
                  action: "change->manage--overview#filter"
                } %>
          </div>
        <% end %>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Courses -->
        <div class="rounded-lg p-5 bg-white dark:bg-gray-800 text-gray-800 dark:text-white shadow-xl hover:shadow-2xl ">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Tổng số khóa học</p>
              <p class="text-2xl font-bold text-blue-600 dark:text-purple-400"><%= @total_courses %></p>
            </div>
            <div class="p-3 bg-blue-100 dark:bg-purple-600/20 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Total Students -->
        <div class="rounded-lg p-5 bg-white dark:bg-gray-800 text-gray-800 dark:text-white shadow-xl hover:shadow-2xl ">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Tổng số học viên</p>
              <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= @total_students %></p>
            </div>
            <div class="p-3 bg-green-100 dark:bg-green-600/20 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Completion Rate -->
        <div class="rounded-lg p-5 bg-white dark:bg-gray-800 text-gray-800 dark:text-white shadow-xl hover:shadow-2xl ">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Tỷ lệ hoàn thành</p>
              <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"><%= @completion_rate %>%</p>
            </div>
            <div class="p-3 bg-yellow-100 dark:bg-yellow-600/20 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Average Rating -->
        <div class="rounded-lg p-5 bg-white dark:bg-gray-800 text-gray-800 dark:text-white shadow-xl hover:shadow-2xl ">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-400">Đánh giá trung bình</p>
              <p class="text-2xl font-bold text-red-600 dark:text-red-400"><%= @average_rating %>/5</p>
            </div>
            <div class="p-3 bg-red-100 dark:bg-red-600/20 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Courses Overview -->
        <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-xl rounded-lg">
          <div class="p-4 md:p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
              <div>
                <h2 class="text-lg md:text-xl text-blue-600 dark:text-purple-400 font-medium">Khóa học</h2>
                <p class="text-sm text-gray-600 dark:text-gray-400">Tổng quan về các khóa học của bạn</p>
              </div>
            </div>
          </div>
          <div class="p-4 md:p-6">
            <!-- Course Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
              <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                <p class="text-sm text-blue-600 dark:text-blue-400">Đang hoạt động</p>
                <p class="text-2xl font-bold text-blue-700 dark:text-blue-300"><%= @active_courses %></p>
              </div>
              <div class="bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded-lg">
                <p class="text-sm text-yellow-600 dark:text-yellow-400">Đang chờ duyệt</p>
                <p class="text-2xl font-bold text-yellow-700 dark:text-yellow-300"><%= @pending_courses %></p>
              </div>
              <div class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg">
                <p class="text-sm text-green-600 dark:text-green-400">Học viên mới</p>
                <p class="text-2xl font-bold text-green-700 dark:text-green-300"><%= @new_students %></p>
              </div>
            </div>

            <!-- Students by Course -->
            <div class="mt-6">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Học viên theo khóa học</h3>
              <div class="overflow-x-auto max-h-[400px] overflow-y-auto">
                <table class="table w-full">
                  <thead class="sticky top-0 bg-white dark:bg-gray-800">
                    <tr>
                      <th class="bg-white dark:bg-gray-800">Khóa học</th>
                      <th class="bg-white dark:bg-gray-800">Số học viên</th>
                      <th class="bg-white dark:bg-gray-800">Học viên mới (30 ngày)</th>
                      <th class="bg-white dark:bg-gray-800">Tỷ lệ hoàn thành</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @students_by_course.each do |course| %>
                      <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                        <td class="font-medium"><%= course[:title] %></td>
                        <td><%= course[:student_count] %></td>
                        <td><%= course[:new_students_count] %></td>
                        <td><%= course[:completion_rate] %>%</td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Content Overview -->
        <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-xl rounded-lg">
          <div class="p-4 md:p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
              <div>
                <h2 class="text-lg md:text-xl text-blue-600 dark:text-purple-400 font-medium">Nội dung khóa học</h2>
                <p class="text-sm text-gray-600 dark:text-gray-400">Thống kê về nội dung đã tạo</p>
              </div>
            </div>
          </div>
          <div class="p-4 md:p-6">
            <!-- Content Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
              <div class="bg-emerald-50 dark:bg-emerald-900/20 p-4 rounded-lg">
                <p class="text-sm text-emerald-600 dark:text-emerald-400">Tổng số video</p>
                <p class="text-2xl font-bold text-emerald-700 dark:text-emerald-300"><%= @total_videos %></p>
              </div>
              <div class="bg-amber-50 dark:bg-amber-900/20 p-4 rounded-lg">
                <p class="text-sm text-amber-600 dark:text-amber-400">Đang chờ duyệt</p>
                <p class="text-2xl font-bold text-amber-700 dark:text-amber-300"><%= @pending_videos %></p>
              </div>
              <div class="bg-rose-50 dark:bg-rose-900/20 p-4 rounded-lg">
                <p class="text-sm text-rose-600 dark:text-rose-400">Bị từ chối</p>
                <p class="text-2xl font-bold text-rose-700 dark:text-rose-300"><%= @rejected_videos %></p>
              </div>
            </div>

            <!-- Quiz Stats -->
            <div class="mt-6">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Thống kê bài kiểm tra</h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-sky-50 dark:bg-sky-900/20 p-4 rounded-lg">
                  <p class="text-sm text-sky-600 dark:text-sky-400">Tổng số quiz</p>
                  <p class="text-2xl font-bold text-sky-700 dark:text-sky-300"><%= @total_quizzes %></p>
                </div>
                <div class="bg-violet-50 dark:bg-violet-900/20 p-4 rounded-lg">
                  <p class="text-sm text-violet-600 dark:text-violet-400">Điểm trung bình</p>
                  <p class="text-2xl font-bold text-violet-700 dark:text-violet-300"><%= @average_quiz_score %></p>
                </div>
                <div class="bg-fuchsia-50 dark:bg-fuchsia-900/20 p-4 rounded-lg">
                  <p class="text-sm text-fuchsia-600 dark:text-fuchsia-400">Tỷ lệ hoàn thành</p>
                  <p class="text-2xl font-bold text-fuchsia-700 dark:text-fuchsia-300"><%= @quiz_completion_rate %>%</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Quick Actions - Di chuyển ra khỏi turbo_frame -->
<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-6">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <%= link_to new_manage_course_path, class: "btn btn-primary w-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      Tạo khóa học mới
    <% end %>

    <%= link_to new_manage_quiz_path, class: "btn btn-secondary w-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      Tạo bài kiểm tra mới
    <% end %>

    <%= link_to new_manage_video_path, class: "btn btn-accent w-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
      Thêm video mới
    <% end %>

    <%= link_to manage_enrollments_path, class: "btn btn-info w-full" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      Quản lý học viên
    <% end %>
  </div>
</div>
