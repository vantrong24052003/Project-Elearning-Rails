<div class="min-h-screen bg-gradient-to-br from-[#0D0A25] to-[#1A1744] text-white p-6">
  <div class="container py-6">
    <%= render 'shared/data_table',
      title: "Courses",
      subtitle: "Manage your courses here",
      header_actions: render(partial: "manage/courses/header_actions"),
      turbo_frame_id: "courses_data_table",
      filters: {
        url: manage_courses_path,
        search_placeholder: "Search courses...",
        status_options: [['All Status', ''], ['Published', 'published'], ['Draft', 'draft']],
        categories: @categories_for_filter,
        turbo_frame: "courses_data_table"
      },
      columns: [
        { label: "Course", key: "title" },
        { label: "Category", key: "category" },
        { label: "Instructor", key: "instructor" },
        { label: "Price", key: "price" },
        { label: "Status", key: "status" },
        { label: "Actions", key: "actions" , align: "right" }
      ],
      collection: @courses,
      selectable: true,
      empty_message: "No courses found",
      empty_guidance: "Get started by creating a new course or adjust your search filters.",
      pagination_label: "courses",
      content_partial_path: "manage/courses/course"
    %>
  </div>
</div>
