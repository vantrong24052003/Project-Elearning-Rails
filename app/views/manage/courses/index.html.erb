<h1>Manage Courses</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= truncate(course.description, length: 50) %></td>
        <td>$<%= course.price %></td>
        <td>
          <%= link_to 'Show', manage_course_path(course) %> |
          <%= link_to 'Edit', edit_manage_course_path(course) %> |
          <%= link_to 'Delete', manage_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Course', new_manage_course_path, class: 'button' %>
