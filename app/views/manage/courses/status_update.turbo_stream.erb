<%= turbo_stream.replace dom_id(@course) do %>
  <%= render partial: "course", locals: { course: @course } %>
<% end %>

<% if flash[:notice].present? %>
  <%= turbo_stream.prepend "flash" do %>
    <div class="animate-fade-in bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded shadow-sm" role="alert" data-controller="flash">
      <div class="flex items-start">
        <div class="flex-1">
          <p class="font-medium"><%= flash[:notice] %></p>
        </div>
        <button data-action="flash#dismiss" class="ml-4 text-green-700 hover:text-green-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>
<% end %>
