<div class="relative" data-controller="shared--dropdown">
  <button type="button" id="bulkActions" data-action="shared--dropdown#toggle click@window->shared--dropdown#hide" class="inline-flex items-center justify-center bg-gray-800 border border-gray-700 hover:bg-gray-700 text-white rounded-md px-4 py-2.5 text-sm hidden transition-colors">
    <span class="mr-1" id="selectedCount">0</span>
    <span class="mr-1">đã chọn</span>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>

  <div data-shared--dropdown-target="menu" class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-md shadow-lg z-10 hidden">
    <div class="py-1">
      <%= link_to "#", class: "block w-full text-left px-4 py-2 text-sm text-white hover:bg-gray-700", data: { controller: "dashboard--bulk-action", action: "dashboard--bulk-action#publish", url: bulk_publish_manage_courses_path } do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 6 9 17l-5-5"/>
          </svg>
          Xuất bản
        </div>
      <% end %>

      <%= link_to "#", class: "block w-full text-left px-4 py-2 text-sm text-white hover:bg-gray-700", data: { controller: "dashboard--bulk-action", action: "dashboard--bulk-action#draft", url: bulk_draft_manage_courses_path } do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
            <path d="M18.5 2.5a2.12 2.12 0 0 1 3 3L12 15l-4 1 1-4Z"/>
          </svg>
          Lưu bản nháp
        </div>
      <% end %>

      <div class="border-t border-gray-700 my-1"></div>

      <%= link_to "#", class: "block w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-gray-700", data: { controller: "dashboard--bulk-action", action: "dashboard--bulk-action#delete", url: bulk_delete_manage_courses_path, confirm: "Bạn có chắc chắn muốn xóa các khóa học đã chọn không?" } do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 6h18"/>
            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
          </svg>
          Xóa đã chọn
        </div>
      <% end %>
    </div>
  </div>
</div>
