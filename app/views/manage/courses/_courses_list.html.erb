<%= turbo_frame_tag "courses_list" do %>
  <%= render "shared/data_table", {
    title: "Danh sách khóa học",
    subtitle: "#{courses.total_count} khóa học được tìm thấy",
    collection: courses,
    columns: [
      { label: "Khóa học", align: "left" },
      { label: "Giảng viên", align: "left" },
      { label: "Giá", align: "left" },
      { label: "Trạng thái", align: "left" },
      { label: "Hành động", align: "right" }
    ],
    selectable: true,
    selection_controller: "dashboard--course-selection",
    empty_message: "Không tìm thấy khóa học nào",
    empty_guidance: "Thử thay đổi bộ lọc hoặc tạo khóa học mới",
    pagination_label: "khóa học",
    pagination_data: { turbo_frame: "courses_list" },
    content: render(partial: "manage/courses/course", collection: courses, as: :course)
  } %>
<% end %>
