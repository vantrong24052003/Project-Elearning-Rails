<%= turbo_frame_tag "courses_list" do %>
  <div class="bg-gray-900 border border-gray-700 shadow-xl rounded-lg">
    <div class="p-4 md:p-6 border-b border-gray-700">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
        <div>
          <h2 class="text-lg md:text-xl text-purple-400 font-medium">Danh sách khóa học</h2>
          <p class="text-sm text-gray-400"><%= courses.count %> khóa học được tìm thấy</p>
        </div>
        <div class="flex items-center gap-2">
          <div class="relative" data-controller="shared--dropdown">
            <button type="button" id="bulkActions" 
                    data-action="shared--dropdown#toggle click@window->shared--dropdown#hide" 
                    class="inline-flex items-center justify-center bg-gray-800 border border-gray-700 hover:bg-gray-700 text-white rounded-md px-4 py-2.5 text-sm hidden transition-colors">
              <span class="mr-1" id="selectedCount">0</span>
              <span class="mr-1">đã chọn</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>

            <div data-shared--dropdown-target="menu" class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-md shadow-lg z-10 hidden">
              <div class="py-1">
                <%= link_to "Xuất bản", "#", 
                        class: "block w-full text-left px-4 py-2 text-sm text-white hover:bg-gray-700",
                        data: {
                          controller: "dashboard--bulk-action",
                          action: "dashboard--bulk-action#publish",
                          url: bulk_publish_manage_courses_path
                        } %>
                
                <%= link_to "Lưu bản nháp", "#", 
                        class: "block w-full text-left px-4 py-2 text-sm text-white hover:bg-gray-700",
                        data: {
                          controller: "dashboard--bulk-action",
                          action: "dashboard--bulk-action#draft",
                          url: bulk_draft_manage_courses_path
                        } %>
                
                <div class="border-t border-gray-700 my-1"></div>
                
                <%= link_to "Xóa đã chọn", "#", 
                        class: "block w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-gray-700",
                        data: {
                          controller: "dashboard--bulk-action",
                          action: "dashboard--bulk-action#delete",
                          url: bulk_delete_manage_courses_path,
                          confirm: "Bạn có chắc chắn muốn xóa các khóa học đã chọn không?"
                        } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="p-4 md:p-6">
      <div class="overflow-x-auto" 
            data-controller="dashboard--course-selection"
            data-dashboard--course-selection-selected-ids-value="[]">
        <table class="w-full min-w-[720px]">
          <thead>
            <tr class="border-b border-gray-800">
              <th class="text-left py-3 px-4">
                <input type="checkbox" data-action="change->dashboard--course-selection#toggleAll" class="rounded border-gray-600 bg-gray-800 text-purple-600 focus:ring-purple-500">
              </th>
              <th class="text-left py-3 px-4 text-gray-400 font-medium">Khóa học</th>
              <th class="text-left py-3 px-4 text-gray-400 font-medium">Giảng viên</th>
              <th class="text-left py-3 px-4 text-gray-400 font-medium">Giá</th>
              <th class="text-left py-3 px-4 text-gray-400 font-medium">Trạng thái</th>
              <th class="text-right py-3 px-4 text-gray-400 font-medium">Hành động</th>
            </tr>
          </thead>
          <tbody>
            <% courses.each do |course| %>
              <tr id="course_<%= course.id %>" class="border-b border-gray-800 hover:bg-gray-800/50 transition-colors">
                <td class="py-3 px-4">
                  <input type="checkbox" value="<%= course.id %>" 
                        data-dashboard--course-selection-target="checkbox" 
                        data-action="change->dashboard--course-selection#toggle" 
                        class="rounded border-gray-600 bg-gray-800 text-purple-600 focus:ring-purple-500">
                </td>
                <td class="py-3 px-4">
                  <div class="flex items-center">
                    <div class="w-12 h-8 rounded mr-3 bg-gray-800 overflow-hidden flex-shrink-0">
                      <% if course.thumbnail_path.present? %>
                        <img src="<%= course.thumbnail_path %>" alt="<%= course.title %>" class="w-full h-full object-cover">
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center bg-purple-900/30">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
                            <circle cx="9" cy="9" r="2"/>
                            <path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div>
                      <div class="font-medium text-white"><%= course.title %></div>
                      <div class="text-xs text-gray-400">Tạo: <%= course.created_at.strftime("%d/%m/%Y") %></div>
                    </div>
                  </div>
                </td>
                <td class="py-3 px-4 text-gray-300"><%= course.user.name %></td>
                <td class="py-3 px-4 text-purple-400 font-medium"><%= number_to_currency(course.price, unit: "₫", precision: 0, delimiter: ".") %></td>
                <td class="py-3 px-4">
                  <span class="<%= course.status == 'published' ? 'bg-green-900/30 text-green-400' : 'bg-yellow-900/30 text-yellow-400' %> px-2.5 py-1 rounded-full text-xs inline-flex items-center">
                    <% if course.status == 'published' %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 6 9 17l-5-5"/>
                      </svg>
                      Đã xuất bản
                    <% else %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2v10M12 16h.01"/>
                      </svg>
                      Bản nháp
                    <% end %>
                  </span>
                </td>
                <td class="py-3 px-4 text-right">
                  <div class="relative inline-block" data-controller="shared--dropdown">
                    <button type="button" 
                           data-action="shared--dropdown#toggle click@window->shared--dropdown#hide" 
                           class="h-8 w-8 text-gray-400 hover:text-white hover:bg-gray-800 rounded-md flex items-center justify-center transition-colors">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="1"/><circle cx="19" cy="12" r="1"/><circle cx="5" cy="12" r="1"/>
                      </svg>
                    </button>
                    <div data-shared--dropdown-target="menu" class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-md shadow-lg z-10 hidden">
                      <div class="py-1 px-3 text-sm text-gray-300 border-b border-gray-700">Hành động</div>
                      <div class="py-1">
                        <%= link_to edit_manage_course_path(course), class: "block px-4 py-2 text-sm text-white hover:bg-gray-700 transition-colors", data: { turbo_frame: "content_frame" } do %>
                          <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
                              <path d="m15 5 4 4"/>
                            </svg>
                            Chỉnh sửa
                          </div>
                        <% end %>
                        
                        <%= link_to manage_course_path(course), class: "block px-4 py-2 text-sm text-white hover:bg-gray-700 transition-colors", data: { turbo_frame: "content_frame" } do %>
                          <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                              <circle cx="12" cy="12" r="3"/>
                            </svg>
                            Xem chi tiết
                          </div>
                        <% end %>
                        
                        <div class="border-t border-gray-700 my-1"></div>
                        
                        <%= button_to manage_course_path(course), 
                                method: :delete, 
                                form: { data: { turbo_frame: "courses_list", turbo_confirm: "Bạn có chắc chắn muốn xóa khóa học này?" } },
                                class: "block w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-gray-700 transition-colors" do %>
                          <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                              <line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/>
                            </svg>
                            Xóa
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if courses.empty? %>
              <tr>
                <td colspan="6" class="py-10 text-center text-gray-400">
                  <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-600 mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                  <p>Không tìm thấy khóa học nào</p>
                  <p class="mt-2 text-sm">Thử thay đổi bộ lọc hoặc tạo khóa học mới</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if courses.respond_to?(:total_pages) && courses.total_pages > 1 %>
        <!-- Pagination -->
        <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-6 gap-4">
          <div class="text-sm text-gray-400">
            Hiển thị <%= courses.offset_value + 1 %>-<%= [courses.offset_value + courses.limit_value, courses.total_count].min %> trong số <%= courses.total_count %> khóa học
          </div>
          <div class="flex items-center space-x-1">
            <%= paginate courses, theme: 'tailwind', window: 2, data: { turbo_frame: "courses_list" } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
