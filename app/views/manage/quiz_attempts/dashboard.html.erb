<div class="container mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col gap-4">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Dashboard giám sát bài kiểm tra</h1>
    </div>

    <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-xl rounded-lg">
      <div class="p-4 md:p-6 border-b border-gray-200 dark:border-gray-700">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
          <div>
            <h2 class="text-lg md:text-xl text-blue-600 dark:text-purple-400 font-medium">Khóa học có bài kiểm tra</h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">Danh sách các khóa học có bài kiểm tra và lượt làm bài</p>
          </div>

          <div class="flex items-center gap-2">
            <%= link_to manage_courses_path, class: "btn btn-outline btn-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="3" y1="9" x2="21" y2="9"></line>
                <line x1="9" y1="21" x2="9" y2="9"></line>
              </svg>
              Tất cả khóa học
            <% end %>
          </div>
        </div>
      </div>

      <div class="p-4 md:p-6">
        <div class="overflow-x-auto overflow-y-auto max-h-[70vh]">
          <table class="table table-zebra w-full">
            <thead class="sticky top-0 bg-gray-50 dark:bg-gray-800 z-10">
              <tr>
                <th class="text-left">STT</th>
                <th class="text-left">Tên khóa học</th>
                <th class="text-left">Bài kiểm tra</th>
                <th class="text-left">Tổng số lần làm</th>
                <th class="text-left">Điểm trung bình</th>
                <th class="text-left">Điểm cao nhất</th>
                <th class="text-left">Hành động</th>
              </tr>
            </thead>

            <tbody>
              <% if @courses_with_quizzes.any? %>
                <% @courses_with_quizzes.each_with_index do |course, index| %>
                  <% course.quizzes.each do |quiz| %>
                    <% 
                      attempts_count = quiz.quiz_attempts.count
                      avg_score = quiz.quiz_attempts.average(:score)&.round(1) || 0
                      max_score = quiz.quiz_attempts.maximum(:score) || 0
                    %>
                    <tr class="border-b border-gray-200 dark:border-gray-800 hover:bg-gray-100 dark:hover:bg-gray-800/50">
                      <td class="py-3 px-4">
                        <div class="flex items-center">
                          <%= (@courses_with_quizzes.offset_value || 0) + index + 1 %>
                        </div>
                      </td>

                      <td class="py-3 px-4">
                        <div class="flex items-center">
                          <div class="w-8 h-8 rounded overflow-hidden bg-gray-200 dark:bg-gray-700 mr-3 flex-shrink-0">
                            <% if course.thumbnail_path.present? %>
                            <img src="<%= course.thumbnail_path %>" alt="<%= course.title %>" class="w-full h-full object-cover">
                            <% else %>
                            <div class="w-full h-full flex items-center justify-center bg-blue-500 dark:bg-indigo-600">
                              <span class="text-white text-sm font-medium"><%= course.title.first.upcase %></span>
                            </div>
                            <% end %>
                          </div>
                          <div>
                            <p class="font-medium text-gray-800 dark:text-white"><%= course.title %></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400"><%= course.quizzes.count %> bài kiểm tra</p>
                          </div>
                        </div>
                      </td>

                      <td class="py-3 px-4">
                        <div>
                          <p class="font-medium text-gray-800 dark:text-white"><%= quiz.title %></p>
                          <span class="inline-block mt-1 px-2 py-1 text-xs font-medium rounded-full
                                <%= quiz.is_exam ?
                                  'bg-red-100 text-red-600 border border-red-200 dark:bg-red-600/20 dark:text-red-400 dark:border-red-600/30' :
                                  'bg-green-100 text-green-600 border border-green-200 dark:bg-green-600/20 dark:text-green-400 dark:border-green-600/30' %>">
                            <%= quiz.is_exam ? 'Bài thi' : 'Bài tập' %>
                          </span>
                        </div>
                      </td>

                      <td class="py-3 px-4">
                        <span class="text-gray-800 dark:text-white font-medium"><%= attempts_count %> lần</span>
                      </td>

                      <td class="py-3 px-4">
                        <span class="font-medium <%= avg_score >= 70 ? 'text-green-600 dark:text-green-400' : 
                                              (avg_score >= 40 ? 'text-yellow-600 dark:text-yellow-400' : 
                                                        'text-red-600 dark:text-red-400') %>">
                          <%= avg_score %>%
                        </span>
                      </td>

                      <td class="py-3 px-4">
                        <span class="font-medium <%= max_score >= 70 ? 'text-green-600 dark:text-green-400' : 
                                              (max_score >= 40 ? 'text-yellow-600 dark:text-yellow-400' : 
                                                        'text-red-600 dark:text-red-400') %>">
                          <%= max_score %>%
                        </span>
                      </td>

                      <td class="py-3 px-4">
                        <div class="flex items-center gap-2">
                          <%= link_to manage_quiz_quiz_attempts_path(quiz),
                                class: "text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 p-2 rounded-md",
                                title: "Xem lịch sử làm bài" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                              <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                          <% end %>

                          <%= link_to manage_quiz_path(quiz),
                                class: "text-blue-600 hover:text-blue-800 dark:text-blue-300 dark:hover:text-white bg-blue-100 hover:bg-blue-200 dark:bg-blue-900/30 dark:hover:bg-blue-800/50 p-2 rounded-md",
                                title: "Thông tin quiz" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                              <polyline points="14 2 14 8 20 8"></polyline>
                              <line x1="16" y1="13" x2="8" y2="13"></line>
                              <line x1="16" y1="17" x2="8" y2="17"></line>
                              <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="7" class="py-10 text-center text-gray-500 dark:text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 01-2-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <p>Không tìm thấy khóa học nào có bài kiểm tra</p>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-4 gap-4">
          <div class="text-sm text-gray-600 dark:text-gray-400">
            <% if @courses_with_quizzes.respond_to?(:total_count) && @courses_with_quizzes.total_count > 0 %>
              Hiển thị <%= @courses_with_quizzes.offset_value + 1 %>-<%= [@courses_with_quizzes.offset_value + @courses_with_quizzes.limit_value, @courses_with_quizzes.total_count].min %> trong số <%= @courses_with_quizzes.total_count %> khóa học
            <% else %>
              0 khóa học
            <% end %>
          </div>

          <div class="flex items-center justify-center">
            <div class="flex items-center gap-1">
              <% if @courses_with_quizzes.current_page > 2 %>
                <%= link_to url_for(request.params.merge(page: 1)),
                    class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 bg-white hover:bg-gray-100 text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m11 17-5-5 5-5" />
                    <path d="m18 17-5-5 5-5" />
                  </svg>
                <% end %>
              <% else %>
                <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 dark:border-gray-700 bg-gray-100 dark:bg-gray-900 text-gray-400 dark:text-gray-600 cursor-not-allowed">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m11 17-5-5 5-5" />
                    <path d="m18 17-5-5 5-5" />
                  </svg>
                </span>
              <% end %>

              <% if @courses_with_quizzes.respond_to?(:prev_page) && @courses_with_quizzes.prev_page %>
                <%= link_to url_for(request.params.merge(page: @courses_with_quizzes.prev_page)),
                    class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 bg-white hover:bg-gray-100 text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15 18-6-6 6-6" />
                  </svg>
                <% end %>
              <% else %>
                <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 dark:border-gray-700 bg-gray-100 dark:bg-gray-900 text-gray-400 dark:text-gray-600 cursor-not-allowed">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15 18-6-6 6-6" />
                  </svg>
                </span>
              <% end %>

              <% start_page = [1, @courses_with_quizzes.current_page - 2].max %>
              <% end_page = [@courses_with_quizzes.total_pages, @courses_with_quizzes.current_page + 2].min %>

              <% (start_page..end_page).each do |page| %>
                <% if page == @courses_with_quizzes.current_page %>
                  <span class="flex items-center justify-center w-9 h-9 rounded-md border border-blue-500 dark:border-purple-700 bg-blue-50 dark:bg-purple-700/30 text-blue-700 dark:text-white font-medium">
                    <%= page %>
                  </span>
                <% else %>
                  <%= link_to page, url_for(request.params.merge(page: page)),
                        class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 bg-white hover:bg-gray-100 text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" %>
                <% end %>
              <% end %>

              <% if @courses_with_quizzes.respond_to?(:next_page) && @courses_with_quizzes.next_page %>
                <%= link_to url_for(request.params.merge(page: @courses_with_quizzes.next_page)),
                    class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 bg-white hover:bg-gray-100 text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6" />
                  </svg>
                <% end %>
              <% else %>
                <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 dark:border-gray-700 bg-gray-100 dark:bg-gray-900 text-gray-400 dark:text-gray-600 cursor-not-allowed">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6" />
                  </svg>
                </span>
              <% end %>

              <% if @courses_with_quizzes.respond_to?(:total_pages) && @courses_with_quizzes.respond_to?(:current_page) && @courses_with_quizzes.current_page < @courses_with_quizzes.total_pages - 1 %>
                <%= link_to url_for(request.params.merge(page: @courses_with_quizzes.total_pages)),
                    class: "flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 bg-white hover:bg-gray-100 text-gray-700 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m13 17 5-5-5-5" />
                    <path d="m6 17 5-5-5-5" />
                  </svg>
                <% end %>
              <% else %>
                <span class="flex items-center justify-center w-9 h-9 rounded-md border border-gray-300 dark:border-gray-700 bg-gray-100 dark:bg-gray-900 text-gray-400 dark:text-gray-600 cursor-not-allowed">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m13 17 5-5-5-5" />
                    <path d="m6 17 5-5-5-5" />
                  </svg>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
