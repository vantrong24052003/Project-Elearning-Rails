<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-800 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
  <!-- Reset Password Card -->
  <div class="w-full max-w-md z-10 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg shadow-lg">
    <div class="space-y-1 p-6">
      <div class="flex items-center justify-center mb-4">
        <svg class="h-12 w-12 text-purple-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-center bg-gradient-to-r from-purple-500 to-pink-500 text-transparent bg-clip-text">
        Reset Your Password
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-center">Enter your new password below</p>
    </div>

    <%= form_with model: resource, url: password_path(resource_name), method: :put, class: "space-y-4 p-6 pt-0" do |f| %>
      <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

      <div class="space-y-2">
        <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <div class="relative">
          <%= f.password_field :password, placeholder: "Enter your new password", class: "w-full pl-10 pr-10 dark:bg-gray-700 border-gray-600 placeholder-gray-400 rounded-md py-2 px-3 focus:ring-purple-500 focus:border-purple-500" %>
        </div>
      </div>

      <div class="space-y-2">
        <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <div class="relative">
          <%= f.password_field :password_confirmation, placeholder: "Confirm your new password", class: "w-full pl-10 pr-10 dark:bg-gray-700 border-gray-600 placeholder-gray-400 rounded-md py-2 px-3 focus:ring-purple-500 focus:border-purple-500" %>
        </div>
      </div>

      <div class="flex flex-col space-y-4">
        <%= f.submit "Reset Password", class: "w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white py-2 px-4 rounded-md" %>
        <div class="text-sm text-center text-gray-600 dark:text-gray-400">
          Remember your password?
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-purple-500 hover:text-purple-400" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
