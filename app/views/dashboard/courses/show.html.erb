<div class="container mx-auto px-4 py-8 bg-gray-900">
  <%# Course Header %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
    <div class="lg:col-span-2">
      <div class="bg-gray-800 rounded-lg p-6 h-full">
        <div class="flex items-center gap-4 mb-6">
          <div class="flex-1">
            <h1 class="text-4xl font-bold mb-4 text-white">
              <%= @course.title %>
            </h1>

            <div class="flex items-center gap-4 mb-4">
              <div class="flex items-center">
                <img src="https://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(@course.user.email.downcase) %>?s=32&d=identicon" class="rounded-full h-8 w-8 mr-2" alt="<%= @course.user.email %>" />
                <span class="text-gray-300">
                  <%= @course.user.email %>
                </span>
              </div>

              <% @course.categories.each do |category| %>
              <span class="px-3 py-1 text-sm font-semibold rounded-full bg-purple-500 text-white">
                <%= category.name %>
              </span>
              <% end %>
            </div>

            <div class="flex flex-wrap items-center gap-4">
              <% if @course.status == 'published' %>
              <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-500 text-white">
                Đã xuất bản
              </span>
              <% else %>
              <span class="px-3 py-1 text-sm font-semibold rounded-full bg-yellow-500 text-white">
                Bản nháp
              </span>
              <% end %>

              <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-700 text-white">
                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Cập nhật <%= time_ago_in_words(@course.updated_at) %> trước
              </span>

              <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-700 text-white">
                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <%= @course.enrolled_users.count %> học viên
              </span>
            </div>
          </div>
        </div>

        <p class="text-xl text-gray-300 mb-6">
          <%= @course.description %>
        </p>

        <div class="rounded-xl overflow-hidden border border-gray-700 mb-6">
          <video class="w-full aspect-video" controls poster="<%= @course.thumbnail_path %>">
            <% demo_video = @course.demo_video_path %>
            <% if demo_video.present? %>
              <source src="<%= demo_video %>" type="video/mp4">
            <% else %>
              <source src="https://vjs.zencdn.net/v/oceans.mp4" type="video/mp4">
            <% end %>
            Trình duyệt của bạn không hỗ trợ video.
          </video>
        </div>
      </div>
    </div>

    <div class="lg:col-span-1">
      <div class="h-full bg-gray-800 border border-gray-700 rounded-lg p-6 sticky top-4">
        <%= image_tag @course.thumbnail_path || "placeholder.svg",
            class: "rounded-lg mb-6 mx-auto w-full",
            alt: @course.title %>

        <div class="flex items-center justify-between mb-6">
          <div>
            <span class="text-sm text-gray-400">Học phí</span>
            <div class="text-3xl font-bold text-purple-500">
              <%= number_to_currency(@course.price, unit: "₫", precision: 0, delimiter: ".") %>
            </div>
          </div>
          <div class="text-right">
            <span class="text-sm text-gray-400">Thời lượng</span>
            <div class="text-xl font-semibold text-white">
              <% if @total_duration && @total_duration > 0 %>
              <%= pluralize((@total_duration / 3600.0).ceil, "giờ") %>
              <% else %>
              Đang cập nhật
              <% end %>
            </div>
          </div>
        </div>

        <%# Course features %>
        <div class="space-y-4 mb-6">
          <div class="flex items-center text-gray-300">
            <svg class="w-5 h-5 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Chứng chỉ hoàn thành</span>
          </div>
          <div class="flex items-center text-gray-300">
            <svg class="w-5 h-5 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Học trọn đời</span>
          </div>
          <div class="flex items-center text-gray-300">
            <svg class="w-5 h-5 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span><%= @course.lessons.count %> bài học</span>
          </div>
          <div class="flex items-center text-gray-300">
            <svg class="w-5 h-5 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
            <span>Hỗ trợ trực tuyến</span>
          </div>
        </div>

        <%# Admin có thể xem full content %>
        <% if current_user&.has_role?(:admin) %>
        <%= link_to learning_dashboard_course_path(@course),
              class: "w-full text-lg py-4 mb-4 bg-purple-500 hover:bg-purple-700 text-white rounded-lg text-center block transition duration-200" do %>
        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Xem khóa học
        <% end %>

        <%# Instructor là người tạo khóa học %>
        <% elsif current_user&.has_role?(:instructor) && @course.user_id == current_user.id %>
        <%= link_to learning_dashboard_course_path(@course),
              class: "w-full text-lg py-4 mb-4 bg-purple-500 hover:bg-purple-700 text-white rounded-lg text-center block transition duration-200" do %>
        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Xem khóa học của bạn
        <% end %>
        <% else %>
        <% if Enrollment.exists?(user: current_user, course: @course, status: :active) %>
        <%= link_to course_viewer_dashboard_course_path(@course),
                class: "w-full text-lg py-4 mb-4 bg-purple-500 hover:bg-purple-700 text-white rounded-lg text-center block transition duration-200" do %>
        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Tiếp tục học
        <% end %>
        <% else %>
        <%= link_to payment_dashboard_course_path(@course),
                class: "w-full text-lg py-4 mb-4 bg-green-500 hover:bg-green-700 text-white rounded-lg text-center block transition duration-200" do %>
        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Mua ngay
        <% end %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <%# Course Content %>
  <div class="mb-12" data-controller="dashboard--tabs">
    <div class="border-b border-gray-700">
      <nav class="flex -mb-px">
        <button data-dashboard--tabs-target="tab" data-action="click->dashboard--tabs#switch" class="px-6 py-3 text-lg font-medium text-gray-300 border-b-2 border-transparent hover:text-purple-500 hover:border-purple-500 transition-colors">
          <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Tổng quan
        </button>
        <button data-dashboard--tabs-target="tab" data-action="click->dashboard--tabs#switch" class="px-6 py-3 text-lg font-medium text-gray-300 border-b-2 border-transparent hover:text-purple-500 hover:border-purple-500 transition-colors">
          <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
          </svg>
          Nội dung khóa học
        </button>
        <button data-dashboard--tabs-target="tab" data-action="click->dashboard--tabs#switch" class="px-6 py-3 text-lg font-medium text-gray-300 border-b-2 border-transparent hover:text-purple-500 hover:border-purple-500 transition-colors">
          <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Giảng viên
        </button>
      </nav>
    </div>

    <%# Tab content %>
    <div class="mt-8">
      <%# Overview tab %>
      <div data-dashboard--tabs-target="panel" class="tab-content">
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-6">
          <h2 class="text-3xl font-semibold mb-6 text-white">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Tổng quan khóa học
          </h2>

          <p class="text-lg mb-6 text-gray-300">
            <%= @course.description %>
          </p>

          <h3 class="text-2xl font-semibold mb-4 text-white">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Nội dung bạn sẽ học
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
            <% @course.chapters.each do |chapter| %>
            <div class="flex items-start">
              <svg class="w-6 h-6 text-purple-500 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-lg text-gray-300">
                <%= chapter.title %>
              </span>
            </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Curriculum tab %>
      <div data-dashboard--tabs-target="panel" class="tab-content hidden" data-controller="dashboard--accordion">
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-6">
          <h2 class="text-3xl font-semibold mb-6 text-white">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 110 4 2 2 0 010-4zM7 9H5a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2h-3m-1 0H8a2 2 0 00-2 2v4a2 2 0 002 2h7a2 2 0 002-2v-4a2 2 0 00-2-2z" />
            </svg>
            Nội dung khóa học
          </h2>

          <div class="space-y-4">
            <% @course.chapters.order(:position).each do |chapter| %>
            <div class="border border-gray-700 rounded-lg overflow-hidden">
              <button class="w-full bg-gray-700 px-4 py-3 flex items-center justify-between" data-action="click->dashboard--accordion#toggle" data-dashboard--accordion-target="trigger">
                <h3 class="text-lg font-medium text-white">
                  <svg class="w-6 h-6 text-purple-500 inline-block mr-2 transform transition-transform duration-200" data-dashboard--accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                  <%= chapter.title %>
                </h3>
                <span class="text-sm text-gray-300">
                  <%= pluralize(chapter.lessons.count, 'bài học') %>
                </span>
              </button>

              <div class="divide-y divide-gray-700 hidden" data-dashboard--accordion-target="content">
                <% chapter.lessons.order(:position).each do |lesson| %>
                <div class="p-4 flex items-center justify-between">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-gray-300">
                      <%= lesson.title %>
                    </span>
                  </div>
                  <% if lesson.videos.any? && lesson.videos.first.upload.present? %>
                  <span class="text-sm text-gray-400">
                    <%= Time.at(lesson.videos.first.upload.duration).utc.strftime("%M:%S") %>
                  </span>
                  <% end %>
                </div>
                <% end %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>

      <%# Instructor tab %>
      <div data-dashboard--tabs-target="panel" class="tab-content hidden">
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-6">
          <h2 class="text-3xl font-semibold mb-6 text-white">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v6m-6 0a2 2 0 00-2 2v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h6m6 0h-4a2 2 0 00-2 2v-6a2 2 0 012-2h4m2 0h4a2 2 0 012 2v-6a2 2 0 00-2-2h-4m-1 0H8a2 2 0 00-2 2v6a2 2 0 002 2h7a2 2 0 002-2v-6a2 2 0 00-2-2z" />
            </svg>
            Thông tin giảng viên
          </h2>

          <div class="flex flex-col md:flex-row items-start gap-8">
            <img src="https://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(@course.user.email.downcase) %>?s=192&d=identicon" class="rounded-lg w-48 h-48 object-cover" alt="<%= @course.user.email %>" />

            <div>
              <h3 class="text-2xl font-semibold mb-2 text-white">
                <%= @course.user.email %>
              </h3>

              <div class="flex items-center space-x-6 mb-4">
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.477 6.364 9.268 5.12 7.5 4.227c-1.768 0.874-3.557 1.657-5.227 2.487A1.662 1.662 0 006 7.111v13a1.662 1.662 0 001.787-1.417c2.11 0 3.823-1.102 4.882-2.217.59-1.144 1.006-2.404 1.006-3.913z" />
                  </svg>
                  <span class="text-lg text-gray-300">
                    <%= Course.where(user: @course.user).count %> khóa học
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Related Courses %>
  <% if @related_courses.any? %>
  <h2 class="text-3xl font-semibold mb-6 text-white">
    <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>
    Khóa học liên quan
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @related_courses.each do |course| %>
    <div class="bg-gray-800 border border-gray-700 rounded-lg overflow-hidden">
      <%= image_tag course.thumbnail_path || "placeholder.svg",
              class: "w-full h-48 object-cover",
              alt: course.title %>

      <div class="p-6">
        <h3 class="text-xl font-semibold mb-2 text-white">
          <%= course.title %>
        </h3>

        <p class="text-gray-400 mb-4 line-clamp-2">
          <%= course.description %>
        </p>

        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <img src="https://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(course.user.email.downcase) %>?s=32&d=identicon" class="rounded-full h-8 w-8 mr-2" alt="<%= course.user.email %>" />
            <span class="text-sm text-gray-400">
              <%= course.user.email %>
            </span>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="text-purple-500 font-bold">
            <%= number_to_currency(course.price, unit: "₫", precision: 0, delimiter: ".") %>
          </div>
          <%= link_to "Xem chi tiết", dashboard_course_path(course), class: "px-4 py-2 bg-purple-500 hover:bg-purple-700 text-white rounded-lg transition duration-200", data: { turbo_frame: "_top" } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
