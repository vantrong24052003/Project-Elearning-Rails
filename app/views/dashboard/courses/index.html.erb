<div class="container mx-auto space-y-8 bg-white dark:bg-gray-800">
  <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
    <div class="p-5" data-controller="dashboard--course-filter">
      <div class="flex flex-wrap gap-4">
        <div class="w-full md:flex-1">
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-4 top-1/2 transform -translate-y-1/2 text-purple-500 dark:text-purple-400 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <%= form_with url: dashboard_courses_path, method: :get, data: {
                dashboard__course_filter_target: "searchForm",
                turbo_frame: "course-results"
              } do |f| %>
            <%= f.hidden_field :category_id, data: { dashboard__course_filter_target: "categoryInput" } %>
            <%= f.hidden_field :min_price, data: { dashboard__course_filter_target: "minPriceInput" } %>
            <%= f.hidden_field :max_price, data: { dashboard__course_filter_target: "maxPriceInput" } %>
            <%= f.hidden_field :sort_by, value: params[:sort_by] %>
            <%= f.search_field :search, value: params[:search],
                  placeholder: "Search for courses, topics, or skills...",
                  class: "w-full pl-12 pr-4 py-3 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 focus:border-purple-500 focus:ring focus:ring-purple-200 text-gray-800 dark:text-white",
                  data: {
                    dashboard__course_filter_target: "searchInput",
                    action: "input->dashboard--course-filter#searchWithDebounce"
                  }
              %>
            <% end %>
          </div>
        </div>

        <div class="flex flex-wrap gap-2">
          <div class="relative">
            <select id="category" class="appearance-none w-full md:w-44 pl-4 pr-10 py-3 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-800 dark:text-white cursor-pointer"
                    data-dashboard--course-filter-target="categorySelect"
                    data-action="change->dashboard--course-filter#updateCategoryFilter">
              <option value="">All Categories</option>
              <% @categories.each do |category| %>
              <option value="<%= category.id %>" <%= params[:category_id].to_i == category.id ? 'selected' : '' %>>
                <%= category.name %>
              </option>
              <% end %>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-500 dark:text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>

          <div class="relative">
            <select id="sort" class="appearance-none w-full md:w-44 pl-4 pr-10 py-3 rounded-lg bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-800 dark:text-white cursor-pointer"
                    data-dashboard--course-filter-target="sortSelect"
                    data-action="change->dashboard--course-filter#applySortFilter">
              <option value="newest" <%= params[:sort_by] == 'newest' ? 'selected' : '' %>>Newest First</option>
              <option value="rating" <%= params[:sort_by] == 'rating' ? 'selected' : '' %>>Highest Rated</option>
              <option value="price_low" <%= params[:sort_by] == 'price_low' ? 'selected' : '' %>>Price: Low to High</option>
              <option value="price_high" <%= params[:sort_by] == 'price_high' ? 'selected' : '' %>>Price: High to Low</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-500 dark:text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>

          <button type="button" class="flex items-center justify-center px-4 py-3 rounded-lg bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 text-purple-700 dark:text-purple-300 hover:bg-purple-100 dark:hover:bg-purple-900/30 transition-colors" data-action="click->dashboard--course-filter#toggleFilterModal">
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            More Filters
          </button>
        </div>
      </div>

      <%= turbo_frame_tag "course-results" do %>
        <div data-dashboard--course-filter-target="activeFilters" class="mt-4 <%= params[:search].present? || params[:category_id].present? || params[:min_price].present? || params[:max_price].present? || params[:sort_by].present? ? '' : 'hidden' %>">
          <div class="flex flex-wrap gap-2">
            <% if params[:search].present? %>
            <div data-dashboard--course-filter-target="searchFilter">
              <button type="button" class="inline-flex items-center px-3 py-1.5 rounded-full text-sm bg-indigo-100 text-indigo-800 dark:bg-indigo-900/40 dark:text-indigo-300 border border-indigo-200 dark:border-indigo-800/50 hover:bg-indigo-200 dark:hover:bg-indigo-900/60 transition-colors" data-action="click->dashboard--course-filter#clearSearch">
                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1.5 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <span data-dashboard--course-filter-target="searchTerm"><%= params[:search] %></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <% end %>

            <% if params[:category_id].present? %>
            <div data-dashboard--course-filter-target="categoryFilter">
              <button type="button" class="inline-flex items-center px-3 py-1.5 rounded-full text-sm bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300 border border-blue-200 dark:border-blue-800/50 hover:bg-blue-200 dark:hover:bg-blue-900/60 transition-colors" data-action="click->dashboard--course-filter#clearCategoryFilter">
                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1.5 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <span data-dashboard--course-filter-target="categoryName"><%= @categories.find_by(id: params[:category_id])&.name || "Category" %></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <% end %>

            <% if params[:min_price].present? || params[:max_price].present? %>
            <div data-dashboard--course-filter-target="priceFilter">
              <button type="button" class="inline-flex items-center px-3 py-1.5 rounded-full text-sm bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-300 border border-green-200 dark:border-green-800/50 hover:bg-green-200 dark:hover:bg-green-900/60 transition-colors" data-action="click->dashboard--course-filter#clearPriceFilter">
                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1.5 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="12" y1="1" x2="12" y2="23"></line>
                  <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                </svg>
                <span data-dashboard--course-filter-target="priceFilterText"><%= number_to_currency(params[:min_price] || 0, unit: "", precision: 0) %> - <%= number_to_currency(params[:max_price] || 1000000, unit: "", precision: 0) %>đ</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <% end %>

            <% if params[:sort_by].present? %>
            <div data-dashboard--course-filter-target="sortFilter">
              <button type="button" class="inline-flex items-center px-3 py-1.5 rounded-full text-sm bg-amber-100 text-amber-800 dark:bg-amber-900/40 dark:text-amber-300 border border-amber-200 dark:border-amber-800/50 hover:bg-amber-200 dark:hover:bg-amber-900/60 transition-colors" data-action="click->dashboard--course-filter#clearSortFilter">
                <svg xmlns="http://www.w3.org/2000/svg" class="mr-1.5 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M11 5h10M11 9h5M11 13h2M3 17h16M11 21h6"></path>
                  <path d="M4 17l3-5-3-5"></path>
                </svg>
                <span data-dashboard--course-filter-target="sortText">
                  <% case params[:sort_by]
                     when 'newest' %>Newest First
                  <% when 'rating' %>Highest Rated
                  <% when 'price_low' %>Price: Low to High
                  <% when 'price_high' %>Price: High to Low
                  <% else %>Newest First
                  <% end %>
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </button>
            </div>
            <% end %>
          </div>
        </div>

        <% if @courses.any? %>
        <section class="mt-8">
          <div class="flex items-center justify-between mb-5">
            <h2 class="text-xl md:text-2xl font-semibold text-gray-900 dark:text-white">
              Available Courses
              <span class="text-gray-500 text-base md:text-lg ml-1">(<%= @courses.total_count %>)</span>
            </h2>

            <div class="flex items-center space-x-2">
              <%# Previous button %>
              <% if @courses.current_page > 1 %>
                <%= link_to dashboard_courses_path(request.params.merge(page: @courses.current_page - 1)),
                    class: "flex items-center justify-center w-8 h-8 rounded border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors",
                    data: { turbo_frame: "course-results" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M15 18l-6-6 6-6"/>
                  </svg>
                <% end %>
              <% end %>

              <%# Next button %>
              <% if @courses.current_page < @courses.total_pages %>
                <%= link_to dashboard_courses_path(request.params.merge(page: @courses.current_page + 1)),
                    class: "flex items-center justify-center w-8 h-8 rounded border border-gray-700 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white transition-colors",
                    data: { turbo_frame: "course-results" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 18l6-6-6-6"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5">
            <% @courses.each do |course| %>
            <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
              <div class="relative">
                <div class="aspect-video w-full">
                  <% if course.thumbnail_path.present? %>
                    <img src="<%= course.thumbnail_path %>" alt="<%= course.title %>" class="object-cover w-full h-full"
                         onerror="this.src='https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg'; this.onerror='';">
                  <% else %>
                    <img src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" alt="<%= course.title %>" class="object-cover w-full h-full">
                  <% end %>
                </div>

                <% if course.status == 'published' || (current_user && current_user.has_role?(:instructor)) %>
                <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold rounded-full <%= course.status == 'published' ? 'bg-green-500' : 'bg-yellow-500' %> text-white shadow">
                  <%= course.status.capitalize %>
                </span>
                <% end %>
              </div>

              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">
                  <%= course.title %>
                </h3>

                <div class="flex justify-between items-center mb-3">
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    <%= course.course_categories.first ? course.course_categories.first.category.name : 'Uncategorized' %>
                  </div>

                  <div class="flex items-center gap-1 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-500 fill-current" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2l2.2 6.6h7.1l-5.7 4.1 2.2 6.6-5.7-4.1-5.7 4.1 2.2-6.6-5.7-4.1h7.1z"/>
                    </svg>
                    <span class="text-yellow-500 font-medium">N/A</span>
                    <span class="text-gray-500 dark:text-gray-400">(0)</span>
                  </div>
                </div>

                <div class="flex justify-between items-center mb-3 text-sm text-gray-600 dark:text-gray-400">
                  <div class="flex items-center gap-1.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                      <circle cx="9" cy="7" r="4"></circle>
                    </svg>
                    <span class="truncate max-w-[120px]"><%= course.user.name %></span>
                  </div>

                  <div class="flex items-center gap-1.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                      <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                    </svg>
                    <%
                       chapter_ids = course.chapters.pluck(:id)
                       lesson_count = Lesson.where(chapter_id: chapter_ids).count
                    %>
                    <span><%= lesson_count %> lessons</span>
                  </div>
                </div>
              </div>

              <div class="p-4 flex items-center justify-between border-t border-gray-200 dark:border-gray-700">
                <div>
                  <span class="text-lg font-bold text-gray-900 dark:text-gray-100">
                    <%= number_to_currency(course.price, unit: "", precision: 0) %>đ
                  </span>
                </div>

                <div class="flex items-center space-x-2">
                  <% if current_user && current_user.has_role?(:instructor) && course.user_id == current_user.id %>
                  <%= link_to edit_dashboard_course_path(course), class: "p-2 rounded-md border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                  <% end %>

                  <%= link_to dashboard_course_path(course), class: "px-4 py-2 rounded-md bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium", data: { turbo_frame: "_top" } do %>
                    <% if current_user && Enrollment.exists?(user_id: current_user.id, course_id: course.id, status: :active) %>
                      Continue
                    <% else %>
                      View Details
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
            <% end %>
          </div>

          <%= render partial: 'shared/pagination',
                     locals: {
                       collection: @courses,
                       pagination_label: 'khóa học',
                       turbo_frame_id: 'course-results'
                     } %>

        </section>
        <% else %>
        <section class="mt-8 p-8 text-center bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <h3 class="mt-4 text-xl font-medium text-gray-900 dark:text-white">
              No courses available at the moment
            </h3>
            <p class="mt-2 text-gray-500 dark:text-gray-400">
              Check back soon for exciting new course offerings
            </p>
          </div>
        </section>
        <% end %>
      <% end %>

      <div class="fixed flex inset-0 bg-black bg-opacity-50 z-50 items-center justify-center hidden" data-dashboard--course-filter-target="filterModal">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl max-w-lg w-full p-6 m-4">
          <div class="flex justify-between items-center mb-5">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Advanced Filters</h3>
            <button type="button" data-action="click->dashboard--course-filter#toggleFilterModal" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>

          <div class="space-y-6">
            <div class="space-y-3">
              <label for="modal-category" class="text-sm font-medium text-gray-700 dark:text-gray-300">Category</label>
              <select id="modal-category" class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 py-3 px-4 text-gray-900 dark:text-white shadow-sm" data-dashboard--course-filter-target="modalCategorySelect">
                <option value="">All categories</option>
                <% @categories.each do |category| %>
                <option value="<%= category.id %>" <%= params[:category_id].to_i == category.id ? 'selected' : '' %>>
                  <%= category.name %>
                </option>
                <% end %>
              </select>
            </div>

            <div class="space-y-3">
              <label class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center justify-between">
                Price Range
                <span class="text-xs text-gray-500">
                  <span data-dashboard--course-filter-target="modalPriceMin"><%= number_to_currency(params[:min_price] || 0, unit: "", precision: 0) %></span> -
                  <span data-dashboard--course-filter-target="modalPriceMax"><%= number_to_currency(params[:max_price] || 1000000, unit: "", precision: 0) %></span>đ
                </span>
              </label>

              <div class="px-2">
                <div class="relative pt-6 pb-2">
                  <div class="relative z-10">
                    <input id="minPriceSlider" type="range" min="0" max="1000000" step="50000" value="<%= params[:min_price] || 0 %>"
                          class="absolute w-full appearance-none bg-transparent pointer-events-auto outline-none [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-6 [&::-webkit-slider-thumb]:w-6 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-purple-500 [&::-webkit-slider-thumb]:border-2 [&::-webkit-slider-thumb]:border-white [&::-webkit-slider-thumb]:z-20 [&::-webkit-slider-thumb]:relative"
                          data-action="input->dashboard--course-filter#updateRangeSliders">

                    <input id="maxPriceSlider" type="range" min="0" max="1000000" step="50000" value="<%= params[:max_price] || 1000000 %>"
                          class="absolute w-full appearance-none bg-transparent pointer-events-auto outline-none [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-6 [&::-webkit-slider-thumb]:w-6 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-purple-500 [&::-webkit-slider-thumb]:border-2 [&::-webkit-slider-thumb]:border-white [&::-webkit-slider-thumb]:z-20 [&::-webkit-slider-thumb]:relative"
                          data-action="input->dashboard--course-filter#updateRangeSliders">
                  </div>

                  <div class="absolute top-6 left-0 right-0 h-1.5 bg-gray-200 dark:bg-gray-700 rounded-md">
                    <div id="rangeTrack" class="absolute h-full bg-purple-500 rounded-md"
                        style="left: <%= (params[:min_price].to_f / 1000000 * 100).round rescue 0 %>%; right: <%= (100 - (params[:max_price].to_f / 1000000 * 100)).round rescue 0 %>%;">
                    </div>
                  </div>
                </div>
              </div>

              <div class="flex justify-between mt-2 px-2 text-xs text-gray-600 dark:text-gray-400">
                <span>0đ</span>
                <span>1,000,000đ</span>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3 mt-8 border-t dark:border-gray-700 pt-5">
            <button type="button" class="px-4 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" data-action="click->dashboard--course-filter#resetFilters">
              Reset All
            </button>
            <button type="button" class="px-4 py-2.5 rounded-lg border border-transparent text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" data-action="click->dashboard--course-filter#applyModalFilters">
              Apply Filters
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <% if current_user && current_user.has_role?(:instructor) && @courses.any? %>
  <section class="mt-8">
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">Course Performance</h2>
    <div class="bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="p-4 bg-purple-50 dark:bg-purple-900/30 rounded-lg border border-purple-200 dark:border-purple-800">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Total Enrollments</h3>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white"><%= @courses.sum { |course| course.enrollments.count } %></p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">From all your courses</p>
        </div>

        <div class="p-4 bg-blue-50 dark:bg-blue-900/30 rounded-lg border border-blue-200 dark:border-blue-800">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Average Rating</h3>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 01-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">
            <%= (@courses.map(&:average_rating).compact.sum / @courses.count).round(1) rescue 'N/A' %>
          </p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Based on all reviews</p>
        </div>

        <div class="p-4 bg-green-50 dark:bg-green-900/30 rounded-lg border border-green-200 dark:border-green-800">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Total Revenue</h3>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">
            <%= number_to_currency(@courses.sum { |course| course.enrollments.count * course.price }, unit: "", precision: 0) %>đ
          </p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Estimated total earnings</p>
        </div>
      </div>

      <%= link_to dashboard_instructor_analytics_path, class: "mt-4 inline-flex items-center text-sm font-medium text-purple-600 hover:text-purple-500" do %>
      View detailed analytics
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <% end %>
    </div>
  </section>
  <% end %>
</div>
