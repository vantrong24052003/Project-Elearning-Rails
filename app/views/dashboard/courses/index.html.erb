<div class="container mx-auto px-4 py-6 space-y-8 bg-white dark:bg-gray-900">
  <section class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-1">Courses</h1>
      <p class="text-sm md:text-base text-gray-600 dark:text-gray-400">
        <%= current_user.has_role?(:instructor) ? "Manage your course catalog" : "Find your next learning opportunity" %>
      </p>
    </div>

    <% if current_user.has_role?(:instructor) || current_user.has_role?(:admin) %>
    <%= link_to new_dashboard_course_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
    </svg>
    Create New Course
    <% end %>
    <% end %>
  </section>

  <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
    <div class="p-5 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Search & Filter Courses</h2>
    </div>

    <div class="p-5" data-controller="course-filter">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-5">
        <div class="lg:col-span-2">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="relative flex-grow">
              <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 dark:text-gray-400 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
              </svg>
              <%= form_with url: dashboard_courses_path, method: :get, data: {
                  course_filter_target: "searchForm",
                  turbo_frame: "course-results",
                  action: "input->course-filter#searchWithDebounce"
                } do |f| %>
              <%= f.hidden_field :category_id, data: { course_filter_target: "categoryInput" } %>
              <%= f.hidden_field :min_price, data: { course_filter_target: "minPriceInput" } %>
              <%= f.hidden_field :max_price, data: { course_filter_target: "maxPriceInput" } %>
              <%= f.search_field :search, value: params[:search],
                    placeholder: "Search for courses...",
                    class: "pl-10 w-full py-2.5 px-4 rounded-md bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 focus:border-purple-500 focus:ring focus:ring-purple-200 text-sm md:text-base",
                    data: {
                      course_filter_target: "searchInput"
                    }
                %>
              <% end %>
            </div>

            <button class="flex-shrink-0 inline-flex items-center justify-center px-4 py-2.5 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" data-action="click->course-filter#toggleFilterModal">
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
              </svg>
              Advanced Filters
            </button>
          </div>
        </div>

        <div class=" dark:bg-gray-750 rounded-lg p-4">
          <label for="price-range" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
            Price Range
          </label>
          <div data-controller="price-slider" data-price-slider-min-value="0" data-price-slider-max-value="1000000" data-price-slider-step-value="50000" data-action="price-slider:change->course-filter#updatePriceRange" class="mt-2">
            <div class="flex justify-between mb-2 text-sm text-gray-600 dark:text-gray-400">
              <span data-price-filter-target="priceMinDisplay"><%= number_to_currency(params[:min_price] || 0, unit: "", precision: 0) %>đ</span>
              <span data-price-filter-target="priceMaxDisplay"><%= number_to_currency(params[:max_price] || 1000000, unit: "", precision: 0) %>đ</span>
            </div>

            <div class="relative pt-5 pb-0">
              <div class="relative z-10">
                <input type="range" min="0" max="1000000" step="50000" value="<%= params[:min_price] || 0 %>"
                      class="absolute w-full appearance-none bg-transparent pointer-events-none outline-none [&::-webkit-slider-thumb]:pointer-events-auto [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-purple-500"
                      data-price-slider-target="minSlider"
                      data-action="input->price-slider#updateValues">

                <input type="range" min="0" max="1000000" step="50000" value="<%= params[:max_price] || 1000000 %>"
                      class="absolute w-full appearance-none bg-transparent pointer-events-none outline-none [&::-webkit-slider-thumb]:pointer-events-auto [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-purple-500"
                      data-price-slider-target="maxSlider"
                      data-action="input->price-slider#updateValues">
              </div>

              <div class="absolute top-5 left-0 right-0 h-1 bg-gray-200 dark:bg-gray-700 rounded-md">
                <div data-price-slider-target="range" class="absolute h-full bg-purple-500 rounded-md"
                    style="left: <%= (params[:min_price].to_f / 1000000 * 100).round rescue 0 %>%; right: <%= (100 - (params[:max_price].to_f / 1000000 * 100)).round rescue 0 %>%;">
                </div>
              </div>
            </div>

            <div class="flex justify-between text-sm mt-8 text-gray-600 dark:text-gray-400">
              <span>Min: <span data-course-filter-target="priceMin"><%= number_to_currency(params[:min_price] || 0, unit: "", precision: 0) %></span>đ</span>
              <span>Max: <span data-course-filter-target="priceMax"><%= number_to_currency(params[:max_price] || 1000000, unit: "", precision: 0) %></span>đ</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Active filters section -->
      <div data-course-filter-target="activeFilters" class="mt-4 <%= params[:search].present? || params[:category_id].present? || params[:min_price].present? || params[:max_price].present? ? '' : 'hidden' %>">
        <span class="text-sm text-gray-600 dark:text-gray-400">Active filters:</span>
        <div class="flex flex-wrap gap-2 mt-2">
          <% if params[:search].present? %>
          <div data-course-filter-target="searchFilter">
            <button class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200" data-action="click->course-filter#clearSearch">
              Search: <span data-course-filter-target="searchTerm"><%= params[:search] %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
          <% end %>

          <% if params[:min_price].present? || params[:max_price].present? %>
          <div data-course-filter-target="priceFilter">
            <button class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200" data-action="click->course-filter#clearPriceFilter">
              Price: <span data-course-filter-target="priceFilterText"><%= number_to_currency(params[:min_price], unit: "", precision: 0) %> - <%= number_to_currency(params[:max_price], unit: "", precision: 0) %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
          <% end %>

          <% if params[:category_id].present? %>
          <div data-course-filter-target="categoryFilter">
            <button class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200" data-action="click->course-filter#clearCategoryFilter">
              Category: <span data-course-filter-target="categoryName"><%= @categories.find(params[:category_id]).name rescue "Unknown" %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
          <% end %>
        </div>
      </div>

      <!-- Filter Modal -->
      <div class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden" data-course-filter-target="filterModal">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6 m-4">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Filter Courses</h3>
            <button data-action="click->course-filter#toggleFilterModal" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 focus:outline-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>

          <div class="space-y-5 py-4">
            <div class="space-y-2">
              <label for="category" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Category</label>
              <select id="category" class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 py-2.5 px-3 text-gray-900 dark:text-white" data-course-filter-target="categorySelect" data-action="change->course-filter#updateCategoryFilter">
                <option value="">All categories</option>
                <% @categories.each do |category| %>
                <option value="<%= category.id %>" <%= params[:category_id].to_i == category.id ? 'selected' : '' %>>
                  <%= category.name %>
                </option>
                <% end %>
              </select>
            </div>

            <div class="space-y-2">
              <label for="sort" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Sort By</label>
              <select id="sort" class="w-full rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 py-2.5 px-3 text-gray-900 dark:text-white" data-course-filter-target="sortSelect">
                <option value="newest" <%= params[:sort_by] == 'newest' ? 'selected' : '' %>>Newest</option>
                <option value="rating" <%= params[:sort_by] == 'rating' ? 'selected' : '' %>>Highest Rated</option>
                <option value="price_low" <%= params[:sort_by] == 'price_low' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price_high" <%= params[:sort_by] == 'price_high' ? 'selected' : '' %>>Price: High to Low</option>
              </select>
            </div>
          </div>

          <div class="flex justify-end space-x-3 mt-6">
            <button class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" data-action="click->course-filter#resetFilters">
              Reset
            </button>
            <button class="px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" data-action="click->course-filter#applyFilters">
              Apply Filters
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%= turbo_frame_tag "course-results" do %>
    <% if @courses.any? %>
    <section class="mt-8">
      <div class="flex items-center justify-between mb-5">
        <h2 class="text-xl md:text-2xl font-semibold text-gray-900 dark:text-white">
          <%= current_user.has_role?(:instructor) ? "Your Created Courses" : "All Courses" %>
          <span class="text-gray-500 text-base md:text-lg ml-1">(<%= @courses.total_count %>)</span>
        </h2>

        <div class="text-sm text-gray-500 dark:text-gray-400">
          Showing <%= @courses.offset_value + 1 %>-<%= @courses.offset_value + @courses.count %> of <%= @courses.total_count %>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5">
        <% @courses.each do |course| %>
        <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <!-- Card header with image -->
          <div class="relative">
            <div class="aspect-video w-full">
              <%= image_tag course.thumbnail_path.present? ? course.thumbnail_path : "placeholder-course.jpg", alt: course.title, class: "object-cover w-full h-full" %>
            </div>

            <!-- Status or category badge -->
            <% if current_user.has_role?(:instructor) %>
            <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold rounded-full <%= course.status == 'published' ? 'bg-green-500' : 'bg-yellow-500' %> text-white shadow">
              <%= course.status.capitalize %>
            </span>
            <% else %>
            <% if course.course_categories.first %>
            <span class="absolute top-3 left-3 px-2 py-1 text-xs font-semibold rounded-full bg-purple-500 text-white shadow">
              <%= course.course_categories.first.category.name %>
            </span>
            <% end %>
            <% end %>
          </div>

          <!-- Card content -->
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">
              <%= course.title %>
            </h3>

            <!-- Course details -->
            <div class="flex justify-between items-center mb-3">
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= course.course_categories.first ? course.course_categories.first.category.name : 'Uncategorized' %>
              </div>

              <div class="flex items-center gap-1 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-500 fill-current" viewBox="0 0 24 24">
                  <path d="M12 2l2.2 6.6h7.1l-5.7 4.1 2.2 6.6-5.7-4.1-5.7 4.1 2.2-6.6-5.7-4.1h7.1z"/>
                </svg>
                <span class="text-yellow-500 font-medium">N/A</span>
                <span class="text-gray-500 dark:text-gray-400">(0)</span>
              </div>
            </div>

            <!-- Instructor and lessons -->
            <div class="flex justify-between items-center mb-3 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center gap-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                </svg>
                <span class="truncate max-w-[120px]"><%= course.user.name %></span>
              </div>

              <div class="flex items-center gap-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <%
                   chapter_ids = course.chapters.pluck(:id)
                   lesson_count = Lesson.where(chapter_id: chapter_ids).count
                %>
                <span><%= lesson_count %> lessons</span>
              </div>
            </div>
          </div>

          <!-- Card footer -->
          <div class="p-4 flex items-center justify-between border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-750">
            <!-- Price -->
            <div>
              <span class="text-lg font-bold text-gray-900 dark:text-gray-100">
                <%= number_to_currency(course.price, unit: "", precision: 0) %>đ
              </span>
            </div>

            <!-- Actions -->
            <div class="flex items-center space-x-2">
              <% if current_user.has_role?(:instructor) && course.user_id == current_user.id %>
              <%= link_to edit_dashboard_course_path(course), class: "p-2 rounded-md border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <% end %>

              <%= link_to dashboard_course_path(course), class: "px-4 py-2 rounded-md bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium" do %>
                <%= current_user.has_role?(:student) ? "Continue" : "View" %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @courses.total_pages > 1 %>
      <div class="mt-8">
        <nav class="flex justify-center" aria-label="Pagination">
          <%= paginate @courses, window: 2, data: { turbo_frame: "course-results" }, class: "pagination" %>
        </nav>
      </div>
      <% end %>
    </section>
    <% else %>
    <section class="mt-8 p-8 text-center bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="py-12">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <h3 class="mt-4 text-xl font-medium text-gray-900 dark:text-white">
          <%= current_user.has_role?(:instructor) ? "You haven't created any courses yet." : "You haven't enrolled in any courses yet." %>
        </h3>
        <p class="mt-2 text-gray-500 dark:text-gray-400">
          <%= current_user.has_role?(:instructor) ? "Start creating your first course to share your knowledge with students." : "Explore our course catalog and start your learning journey today." %>
        </p>
        <div class="mt-6">
          <% if current_user.has_role?(:instructor) %>
          <%= link_to new_dashboard_course_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          Create Your First Course
          <% end %>
          <% else %>
          <%= link_to courses_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
          </svg>
          Browse Courses
          <% end %>
          <% end %>
        </div>
      </div>
    </section>
    <% end %>
  <% end %>

  <!-- Optional: Add analytics section for instructors -->
  <% if current_user.has_role?(:instructor) && @courses.any? %>
  <section class="mt-8">
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">Course Performance</h2>
    <div class="bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="p-4 bg-purple-50 dark:bg-purple-900/30 rounded-lg border border-purple-200 dark:border-purple-800">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Total Enrollments</h3>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white"><%= @courses.sum { |course| course.enrollments.count } %></p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">From all your courses</p>
        </div>

        <div class="p-4 bg-blue-50 dark:bg-blue-900/30 rounded-lg border border-blue-200 dark:border-blue-800">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Average Rating</h3>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">
            <%= (@courses.map(&:average_rating).compact.sum / @courses.count).round(1) rescue 'N/A' %>
          </p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Based on all reviews</p>
        </div>

        <div class="p-4 bg-green-50 dark:bg-green-900/30 rounded-lg border border-green-200 dark:border-green-800">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Total Revenue</h3>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">
            <%= number_to_currency(@courses.sum { |course| course.enrollments.count * course.price }, unit: "", precision: 0) %>đ
          </p>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Estimated total earnings</p>
        </div>
      </div>

      <%= link_to dashboard_instructor_analytics_path, class: "mt-4 inline-flex items-center text-sm font-medium text-purple-600 hover:text-purple-500" do %>
      View detailed analytics
      <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <% end %>
    </div>
  </section>
  <% end %>
</div>
