<div class="min-h-screen w-full dark:bg-gray-900 p-8" data-controller="dashboard--profile">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center mt-2 text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
      Account Management
    </h1>

    <div data-controller="dashboard--tabs" class="w-full">
      <div class="flex w-full dark:bg-gray-800 rounded-lg mb-6">
        <button type="button" class="flex-1 py-3 px-4 dark:text-white hover:bg-purple-600/30 rounded-l-lg data-[active=true]:dark:bg-purple-600 transition-all duration-200"
                data-action="click->dashboard--tabs#select"
                data-dashboard--tabs-target="trigger"
                data-tab="account"
                data-active="true"
                role="tab">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 inline" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Tài khoản
        </button>
        <button type="button" class="flex-1 py-3 px-4 dark:text-white hover:bg-purple-600/30 transition-all duration-200"
                data-action="click->dashboard--tabs#select"
                data-dashboard--tabs-target="trigger"
                data-tab="password"
                data-active="false"
                role="tab">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 inline" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          Đổi mật khẩu
        </button>
        <button type="button" class="flex-1 py-3 px-4 dark:text-white hover:bg-purple-600/30 rounded-r-lg transition-all duration-200"
                data-action="click->dashboard--tabs#select"
                data-dashboard--tabs-target="trigger"
                data-tab="purchases"
                data-active="false"
                role="tab">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 inline" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2L2 7l10 5 10-5l-10-5z"></path>
            <path d="M2 17l10 5 10-5"></path>
            <path d="M2 12l10 5 10-5"></path>
          </svg>
          Khóa học đã mua
        </button>
      </div>

      <div data-dashboard--tabs-target="content" data-tab="account" class="block">
        <div class="dark:bg-gray-900 border border-gray-700 rounded-lg shadow-xl">
          <div class="p-6 border-b border-gray-700">
            <h3 class="text-2xl dark:text-purple-400">Thông tin tài khoản</h3>
            <p class="text-gray-400">Chỉnh sửa thông tin cá nhân của bạn tại đây.</p>
          </div>
          <div class="p-6 space-y-6">
            <%= form_with(model: @user, url: dashboard_profile_path(@user), method: :patch, data: { turbo: false }) do |form| %>
              <div class="space-y-2">
                <%= form.label :name, "Name", class: "block text-sm font-medium dark:text-gray-300" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                      <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                  </div>
                  <%= form.text_field :name, placeholder: "Enter your name", class: "w-full pl-10 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                </div>
                <% if @user.errors[:name].present? %>
                  <p class="text-red-500 text-sm"><%= @user.errors[:name].first %></p>
                <% end %>
              </div>

              <div class="space-y-2 mt-6">
                <label for="email" class="block text-sm font-medium dark:text-gray-300">Email</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                    </svg>
                  </div>
                  <input type="email" id="email" value="<%= @user.email %>" disabled class="w-full pl-10 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-400 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500">
                </div>
                <p class="text-sm text-gray-400">Liên hệ quản trị viên để thay đổi email.</p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                <div class="space-y-2">
                  <%= form.label :phone, "Số điện thoại", class: "block text-sm font-medium dark:text-gray-300" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                      </svg>
                    </div>
                    <%= form.text_field :phone, placeholder: "Nhập số điện thoại", class: "w-full pl-10 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                  </div>
                </div>

                <div class="space-y-2">
                  <%= form.label :address, "Địa chỉ", class: "block text-sm font-medium dark:text-gray-300" %>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                    </div>
                    <%= form.text_field :address, placeholder: "Nhập địa chỉ", class: "w-full pl-10 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                  </div>
                </div>
              </div>

              <div class="space-y-2 mt-6">
                <%= form.label :bio, "Giới thiệu bản thân", class: "block text-sm font-medium dark:text-gray-300" %>
                <%= form.text_area :bio, rows: 4, placeholder: "Viết giới thiệu ngắn về bản thân", class: "w-full pl-3 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
              </div>

              <div class="mt-6">
                <%= form.submit "Lưu thay đổi", class: "w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white py-2 px-4 rounded-md hover:from-purple-600 hover:to-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div data-dashboard--tabs-target="content" data-tab="password" class="hidden">
        <div class="dark:bg-gray-900 border border-gray-700 rounded-lg shadow-xl">
          <div class="p-6 border-b border-gray-700">
            <h3 class="text-2xl dark:text-purple-400">Đổi mật khẩu</h3>
            <p class="text-gray-400">Cập nhật mật khẩu của bạn để bảo mật tài khoản.</p>
          </div>
          <div class="p-6 space-y-6">
            <%= form_with(url: change_password_dashboard_profile_path(@user), method: :patch, data: { turbo: false }) do |form| %>
              <div class="space-y-2">
                <%= form.label :current_password, "Mật khẩu hiện tại", class: "block text-sm font-medium dark:text-gray-300" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                  </div>
                  <%= form.password_field :current_password, placeholder: "Enter your current password", class: "w-full pl-10 pr-10 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                  <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center" data-action="dashboard--profile#togglePasswordVisibility" data-target="current_password">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                      <line x1="1" y1="1" x2="23" y2="23"></line>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="space-y-2 mt-6">
                <%= form.label :password, "Mật khẩu mới", class: "block text-sm font-medium dark:text-gray-300" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                  </div>
                  <%= form.password_field :password, placeholder: "Enter your new password", class: "w-full pl-10 pr-10 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                  <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center" data-action="dashboard--profile#togglePasswordVisibility" data-target="password">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                      <line x1="1" y1="1" x2="23" y2="23"></line>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="space-y-2 mt-6">
                <%= form.label :password_confirmation, "Xác nhận mật khẩu mới", class: "block text-sm font-medium dark:text-gray-300" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                  </div>
                  <%= form.password_field :password_confirmation, placeholder: "Confirm your new password", class: "w-full pl-10 pr-10 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
                  <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center" data-action="dashboard--profile#togglePasswordVisibility" data-target="password_confirmation">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                      <line x1="1" y1="1" x2="23" y2="23"></line>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="mt-6">
                <%= form.submit "Cập nhật mật khẩu", class: "w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white py-2 px-4 rounded-md hover:from-purple-600 hover:to-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div data-dashboard--tabs-target="content" data-tab="purchases" class="hidden">
        <div class="dark:bg-gray-900 border border-gray-700 rounded-lg shadow-xl">
          <div class="p-6 border-b border-gray-700">
            <h3 class="text-2xl dark:text-purple-400">Khóa học đã mua</h3>
            <p class="text-gray-400">Xem và truy cập các khóa học bạn đã thanh toán thành công.</p>
          </div>
          <div class="p-8">
            <% paid_enrollments = @enrollments.select { |e| e.status == 'active'} %>
            <% if paid_enrollments.present? && paid_enrollments.any? %>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <% paid_enrollments.each do |enrollment| %>
                  <% course = enrollment.course %>
                  <% if course.present? %>
                    <div class="dark:bg-gray-800 border border-gray-700 rounded-lg overflow-hidden hover:shadow-lg transform transition-transform duration-200 hover:-translate-y-1">
                      <% if course.thumbnail_path.present? %>
                        <div class="w-full h-48 bg-cover bg-center" style="background-image: url('<%= course.thumbnail_path %>')"></div>
                      <% else %>
                        <div class="w-full h-48 bg-gray-700 flex items-center justify-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="2" width="20" height="20" rx="2.18" ry="2.18"></rect>
                            <line x1="7" y1="2" x2="7" y2="22"></line>
                            <line x1="17" y1="2" x2="17" y2="22"></line>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <line x1="2" y1="7" x2="7" y2="7"></line>
                            <line x1="2" y1="17" x2="7" y2="17"></line>
                            <line x1="17" y1="17" x2="22" y2="17"></line>
                            <line x1="17" y1="7" x2="22" y2="7"></line>
                          </svg>
                        </div>
                      <% end %>
                      <div class="p-5">
                        <h4 class="font-bold text-xl dark:text-gray-100 line-clamp-2 mb-1"><%= course.title %></h4>
                        <p class="text-gray-400 text-sm mb-3 flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                          </svg>
                          <%= course.user.present? ? course.user.name : "Instructor" %>
                        </p>

                        <div class="flex flex-wrap items-center gap-3 mt-2 mb-4">
                          <div class="text-xs">
                            <% if enrollment.completed_at.present? %>
                              <span class="px-3 py-1.5 rounded-full bg-green-900/50 text-green-300 font-medium">
                                <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-3.5 h-3.5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                Hoàn thành
                              </span>
                            <% else %>
                              <span class="px-3 py-1.5 rounded-full bg-blue-900/50 text-blue-300 font-medium">
                                <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-3.5 h-3.5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                  <path d="M12 20V10"></path>
                                  <path d="M18 20V4"></path>
                                  <path d="M6 20v-6"></path>
                                </svg>
                                Đang học
                              </span>
                            <% end %>
                          </div>

                          <div class="text-xs">
                            <span class="px-3 py-1.5 rounded-full bg-purple-900/50 text-purple-300">
                              <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-3.5 h-3.5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                              </svg>
                              <%= enrollment.enrolled_at&.strftime("%d/%m/%Y") || enrollment.created_at&.strftime("%d/%m/%Y") %>
                            </span>
                          </div>
                        </div>

                        <div class="flex gap-3 mt-4">
                          <% if enrollment.completed_at.present? %>
                            <%= link_to dashboard_course_path(course), class: "flex-1 bg-purple-600 hover:bg-purple-700 text-white py-2 px-4 rounded-md transition-colors duration-200 text-center font-medium flex items-center justify-center" do %>
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polygon points="10 8 16 12 10 16 10 8"></polygon>
                              </svg>
                              Xem lại
                            <% end %>
                            <%= link_to "#", class: "flex-1 bg-transparent hover:bg-gray-700 text-purple-400 py-2 px-4 rounded-md border border-purple-500 transition-colors duration-200 text-center font-medium flex items-center justify-center" do %>
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                              </svg>
                              Chứng chỉ
                            <% end %>
                          <% else %>
                            <%= link_to dashboard_course_path(course), class: "w-full bg-purple-600 hover:bg-purple-700 text-white py-2 px-4 rounded-md transition-colors duration-200 text-center font-medium flex items-center justify-center" do %>
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polygon points="10 8 16 12 10 16 10 8"></polygon>
                              </svg>
                              Tiếp tục học
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-16">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20 mx-auto dark:text-purple-400 mb-6 opacity-80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="12" y1="8" x2="12" y2="12"></line>
                  <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                <p class="text-2xl font-semibold mb-3 dark:text-purple-300">Chưa có khóa học nào</p>
                <p class="text-gray-400 mb-6 text-lg max-w-md mx-auto">Bạn chưa mua khóa học nào. Hãy khám phá các khóa học hấp dẫn của chúng tôi.</p>
                <%= link_to "Khám phá khóa học", dashboard_courses_path, class: "inline-block bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-3 px-6 rounded-md transition-colors duration-200 shadow-lg hover:shadow-xl" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
