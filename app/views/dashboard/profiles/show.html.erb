        input.addEventListener('focus', function() {
          this.closest('.relative').classList.add('ring-1', 'ring-purple-500', 'ring-opacity-50');
        });
        input.addEventListener('blur', function() {
          this.closest('.relative').classList.remove('ring-1', 'ring-purple-500', 'ring-opacity-50');
