<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
  <meta name="turbo-visit-control" content="reload">
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
<% end %>

<div class="container mx-auto px-4 py-8 bg-gray-900"
     data-controller="dashboard--quiz-timer"
     data-dashboard--quiz-timer-mode-value="<%= @mode %>"
     data-dashboard--quiz-timer-total-questions-value="<%= @questions.size %>">

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <div class="lg:col-span-1">
      <div class="bg-gray-800 rounded-lg p-6 shadow-lg sticky top-4">
        <div class="mb-4">
          <h2 class="text-xl font-bold text-white mb-2">
            <%= @quiz.title %>
          </h2>
          <p class="text-gray-300 text-sm">
            <%= @quiz.is_exam ? "Bài thi" : "Bài kiểm tra" %> • <%= @questions.size %> câu hỏi
          </p>
        </div>

        <div class="mb-6 text-center">
          <div class="text-3xl font-bold text-white mb-1"
               data-dashboard--quiz-timer-target="display"
               data-time-limit="<%= @quiz.time_limit %>">
            <%= @quiz.time_limit %>:00
          </div>
          <div class="text-sm text-gray-400">Thời gian còn lại</div>

          <div class="mt-2 flex justify-center">
            <button type="button"
                    class="px-3 py-1 bg-gray-700 hover:bg-gray-600 text-white rounded-lg text-sm <%= @quiz.is_exam ? 'hidden' : '' %>"
                    data-dashboard--quiz-timer-target="pauseBtn"
                    data-action="click->dashboard--quiz-timer#togglePause">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Tạm dừng
            </button>
            <button type="button"
                    class="px-3 py-1 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm hidden"
                    data-dashboard--quiz-timer-target="resumeBtn"
                    data-action="click->dashboard--quiz-timer#togglePause">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Tiếp tục
            </button>
          </div>
        </div>

        <div class="mb-6">
          <div class="flex justify-between text-sm text-gray-300 mb-1">
            <span>Tiến độ</span>
            <span>
              <span data-dashboard--quiz-timer-target="progress">0</span>/<span data-dashboard--quiz-timer-target="questionCount"><%= @questions.size %></span> câu
            </span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-2.5">
            <div class="bg-purple-600 h-2.5 rounded-full" style="width: 0%"
                 data-dashboard--quiz-timer-target="progressBar"></div>
          </div>
        </div>

        <div class="mb-6">
          <div class="text-sm text-gray-300 mb-2">Câu hỏi:</div>
          <div class="grid grid-cols-5 gap-2" data-dashboard--quiz-timer-target="questionNav">
            <% @questions.each_with_index do |question, index| %>
              <button type="button"
                      class="w-full aspect-square bg-gray-500 rounded flex items-center justify-center text-white font-medium text-sm"
                      data-dashboard--quiz-timer-target="questionNavItem"
                      data-question-id="<%= question.id %>"
                      data-index="<%= index %>"
                      data-action="click->dashboard--quiz-timer#goToQuestion">
                <%= index + 1 %>
              </button>
            <% end %>
          </div>

          <div class="mt-3 text-xs text-gray-400 flex flex-col gap-1">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-gray-500 rounded mr-2"></div>
              <span>Chưa trả lời</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded mr-2"></div>
              <span>Đã trả lời</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 bg-yellow-500 rounded mr-2"></div>
              <span>Đã đánh dấu</span>
            </div>
          </div>
        </div>

        <div class="mt-6 space-y-2">
          <button type="button"
                  class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium transition-colors"
                  data-dashboard--quiz-timer-target="submitBtn"
                  data-action="click->dashboard--quiz-timer#submitForm">
            Nộp bài
          </button>
          <%= link_to dashboard_course_quizzes_path(@course),
                    class: "w-full py-2 border border-gray-600 hover:bg-gray-700 text-gray-300 rounded-lg text-center block transition-colors text-sm",
                    data: { dashboard__quiz_timer_target: "cancelBtn", action: "click->dashboard--quiz-timer#cancel" } do %>
            Hủy bỏ
          <% end %>
        </div>
      </div>
    </div>

    <div class="lg:col-span-3">
      <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
        <div class="flex justify-between items-center mb-6">
          <div class="text-gray-300">
            Câu <span data-dashboard--quiz-timer-target="currentQuestionDisplay">1</span> / <%= @questions.size %>
          </div>

          <div class="flex gap-2">
            <button type="button"
                    class="px-3 py-1 bg-gray-200 text-gray-700 rounded flex items-center"
                    data-dashboard--quiz-timer-target="flagBtn"
                    data-action="click->dashboard--quiz-timer#flagCurrentQuestion">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
              </svg>
              Đánh dấu
            </button>
          </div>
        </div>

        <%= form_with url: dashboard_course_quiz_attempts_path(@course, @quiz), method: :post, data: { dashboard__quiz_timer_target: "form" } do |f| %>
          <%= f.hidden_field :time_spent, data: { dashboard__quiz_timer_target: "timeSpent" } %>
          <%= f.hidden_field :mode, value: @mode %>

          <% @questions.each_with_index do |question, index| %>
            <div class="mb-8 <%= index == 0 ? '' : 'hidden' %>"
                 data-dashboard--quiz-timer-target="questionContainer"
                 data-question-id="<%= question.id %>">
              <h3 class="text-xl font-semibold text-white mb-4">
                <%= question.content %>
              </h3>

              <div class="space-y-3">
                <% question.options.each_with_index do |option, option_index| %>
                  <div class="flex items-start">
                    <div class="flex items-center h-6 mt-1">
                      <%= f.radio_button "answers[#{question.id}]", option_index, class: "h-5 w-5 text-purple-600 focus:ring-purple-500" %>
                    </div>
                    <div class="ml-3">
                      <label class="text-gray-300 cursor-pointer select-none">
                        <%= option %>
                      </label>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>

        <div class="flex justify-between mt-8">
          <button type="button"
                  class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg"
                  data-action="click->dashboard--quiz-timer#prevQuestion">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Câu trước
          </button>

          <button type="button"
                  class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg"
                  data-action="click->dashboard--quiz-timer#nextQuestion">
            Câu tiếp
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
