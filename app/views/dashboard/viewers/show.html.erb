<div class="flex flex-col px-4 lg:px-8 lg:flex-row min-h-screen text-white gap-6">
  <%= turbo_frame_tag "video_player", class: "w-full lg:w-[70%] xl:w-[75%]" do %>
  <div class="h-full flex flex-col rounded-lg border border-gray-700 shadow-lg">
    <div class="border-b border-gray-700 p-5 rounded-t-lg bg-gray-800/60">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <%= link_to dashboard_course_path(@course), class: "text-purple-400 hover:text-purple-300 mr-3" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          <% end %>

          <h1 class="text-xl font-bold text-white truncate">
            <%= @course.title %>
            <% if @current_lesson %>
              <span class="text-sm font-normal text-purple-300 ml-2">
                <%= @current_lesson.title %>
                <% if @current_video %>
                  <span class="text-xs text-purple-400/80">- <%= @current_video.title %></span>
                <% end %>
              </span>
            <% end %>
          </h1>
        </div>

        <% if @current_video&.upload&.duration %>
          <span class="text-sm text-gray-300 bg-gray-700/50 px-3 py-1 rounded-full hidden md:inline-block">
            <%= Time.at(@current_video.upload.duration).utc.strftime("%M:%S") %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="flex-1 p-5 overflow-y-auto">
      <div class="rounded-lg shadow-md overflow-hidden mb-6">
        <% if @current_video %>
        <video data-controller="dashboard--video-player" data-dashboard--video-player-target="video" data-lesson-id="<%= @current_lesson.id %>" class="w-full aspect-video object-cover" controls src="<%= @current_video.upload.cdn_url %>">
        </video>
        <% else %>
        <div class="aspect-video bg-gray-700 flex items-center justify-center">
          <p class="text-gray-400">Không có video cho bài học này</p>
        </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gray-800/50 border border-gray-700 rounded-lg shadow-md p-5 h-full hover:border-purple-500/50 transition-colors">
          <h3 class="text-lg font-semibold mb-4 flex items-center text-white">
            <svg class="w-5 h-5 text-purple-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span class="truncate">Tài liệu khóa học</span>
          </h3>
          <div class="space-y-3">
            <a href="#" class="block p-4 bg-gray-700 rounded-lg hover:bg-gray-600 hover:shadow-md transition duration-200">
              <div class="flex items-center justify-between">
                <span class="text-gray-200 truncate">Tài liệu bài giảng</span>
                <svg class="w-5 h-5 text-purple-400 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            </a>
          </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700 rounded-lg shadow-md p-5 h-full hover:border-purple-500/50 transition-colors">
          <h3 class="text-lg font-semibold mb-4 flex items-center text-white">
            <svg class="w-5 h-5 text-purple-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            <span class="truncate">Bài kiểm tra</span>
          </h3>
          <div class="space-y-3">
            <a href="#" class="block p-4 bg-gray-700 rounded-lg hover:bg-gray-600 hover:shadow-md transition duration-200">
              <div class="flex items-center justify-between">
                <span class="text-gray-200 truncate">Làm bài kiểm tra</span>
                <svg class="w-5 h-5 text-purple-400 flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="w-full lg:w-[30%] xl:w-[30%]">
    <div class="bg-gray-800 rounded-lg border border-gray-700 shadow-lg h-[calc(100vh-2rem)] overflow-hidden sticky top-4">
      <div class="sticky top-0 bg-gray-800 border-b border-gray-700 z-10 flex items-center justify-between p-5 rounded-t-lg">
        <h3 class="text-xl font-semibold text-white">Nội dung khóa học</h3>
        <div class="flex items-center">
          <div class="w-32 bg-gray-700 rounded-full h-2 mr-2">
            <div class="bg-purple-500 h-2 rounded-full transition-all duration-300"
                 style="background-image: linear-gradient(to right, #9061f9, #a855f7); box-shadow: 0 0 10px rgba(168, 85, 247, 0.3);"
                 data-course-progress style="width: <%='80' %>%">
            </div>
          </div>
          <span class="text-xs text-gray-300 font-medium" data-progress-text>
            <%= '4' %> / <%= 5 %>
          </span>
        </div>
      </div>

      <div class="overflow-y-auto custom-scrollbar" style="height: calc(100vh - 5rem)" data-controller="dashboard--course-viewer">
        <div class="p-5 space-y-4">
          <% @course.chapters.each_with_index do |chapter, chapter_index| %>
            <div class="collapse-group">
              <div class="collapse collapse-arrow bg-gray-800/50 border border-gray-700 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow 
                          <%= chapter.lessons.any? {|l| l.id == @current_lesson&.id} ? 'active-chapter' : '' %>"
                   data-dashboard--course-viewer-target="chapter"
                   style="<%= chapter.lessons.any? {|l| l.id == @current_lesson&.id} ? 'border-color: rgba(168, 85, 247, 0.3);' : '' %>">
                <input type="checkbox" class="accent-purple-500"
                       <%= 'checked' if chapter_index == 0 || chapter.lessons.any? {|l| l.id == @current_lesson&.id} %>
                       data-action="dashboard--course-viewer#toggleChapter" />
                <div class="collapse-title text-white font-medium flex items-center justify-between p-4 hover:bg-gray-700/30 active:bg-gray-700/50 transition-colors">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-purple-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                    <span class="truncate font-bold"><%= chapter.title %></span>
                  </div>
                  <span class="text-xs font-medium text-purple-300 px-2.5 py-1.5 rounded-full bg-purple-900/40 border border-purple-700/50">
                    <%= pluralize(chapter.lessons.count, 'bài học') %>
                  </span>
                </div>
                <div class="collapse-content bg-gray-800/30 p-0">
                  <% chapter.lessons.each do |lesson| %>
                    <div class="border-t border-gray-700">
                      <div class="collapse collapse-arrow bg-transparent 
                                <%= lesson.id == @current_lesson&.id ? 'active-lesson' : '' %>"
                           data-dashboard--course-viewer-target="lesson"
                           data-lesson-id="<%= lesson.id %>"
                           style="<%= lesson.id == @current_lesson&.id ? 'border-color: rgb(168, 85, 247); border-left-width: 4px;' : '' %>">
                        <input type="checkbox"
                               class="accent-purple-500"
                               <%= 'checked' if lesson.id == @current_lesson&.id %>
                               data-action="dashboard--course-viewer#toggleLesson" />
                        <div class="collapse-title text-gray-200 p-4 pl-7 flex items-center justify-between 
                                   hover:bg-gray-700/30 transition-colors">
                          <div class="flex items-center">
                            <svg class="w-5 h-5 <%= lesson.id == @current_lesson&.id ? 'text-purple-400' : 'text-gray-400' %> mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span class="truncate font-medium"><%= lesson.title %></span>
                          </div>
                          <% if lesson.videos.any? %>
                            <span class="text-xs text-gray-400 ml-2 flex-shrink-0 font-medium">
                              <%= lesson.videos.count %> video
                            </span>
                          <% end %>
                        </div>
                        <div class="collapse-content bg-gray-800/20 p-0">
                          <% lesson.videos.order(position: :asc).each do |video| %>
                            <%= link_to dashboard_course_viewer_path(@course, lesson_id: lesson.id, video_id: video.id),
                                        data: {
                                          turbo_frame: "video_player",
                                          turbo: true,
                                          turbo_action: "advance",
                                          video_id: video.id,
                                          dashboard__course_viewer_target: "video",
                                          action: "click->dashboard--course-viewer#markVideoActive"
                                        },
                                        class: "block p-4 pl-12 hover:bg-gray-700/50 transition-colors
                                               #{@current_video&.id == video.id ? 'bg-purple-900/40 text-white font-medium' : 'text-gray-300'}" do %>
                              <div class="flex items-center justify-between w-full">
                                <div class="flex items-center min-w-0 pr-2 flex-grow">
                                  <svg class="w-5 h-5 <%= @current_video&.id == video.id ? 'text-purple-400' : 'text-gray-400' %> mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                  </svg>
                                  <span class="truncate max-w-full"><%= video.title %></span>
                                </div>
                                <% if video.upload.duration %>
                                  <span class="text-xs ml-2 flex-shrink-0 px-2.5 py-1 rounded-full bg-gray-700/70 whitespace-nowrap <%= @current_video&.id == video.id ? 'text-purple-200' : 'text-gray-400' %>">
                                    <%= Time.at(video.upload.duration).utc.strftime("%M:%S") %>
                                  </span>
                                <% end %>
                              </div>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
