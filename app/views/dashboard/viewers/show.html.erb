<div class="flex flex-col px-2 sm:px-4 lg:px-6 xl:px-8 lg:flex-row min-h-screen text-white gap-4 md:gap-6">
  <%= turbo_frame_tag "video_player", class: "w-full lg:w-[65%] xl:w-[70%]" do %>
  <div class="h-full flex flex-col rounded-lg border border-gray-700 shadow-lg">
    <div class="border-b border-gray-700 p-3 sm:p-4 md:p-5 rounded-t-lg bg-gray-800/60">
      <div class="flex items-center justify-between">
        <div class="flex-1 mr-3 min-w-0">
          <h1 class="text-sm sm:text-base md:text-lg font-bold text-white truncate">
            <%= @course.title %>
          </h1>
          <% if @current_lesson %>
            <div class="text-[11px] sm:text-xs font-normal text-purple-300 truncate mt-1">
              <%= @current_lesson.title %>
              <% if @current_video %>
                <span class="text-[10px] sm:text-xs text-purple-400/80 hidden md:inline">- <%= @current_video.title %></span>
              <% end %>
            </div>
          <% end %>
        </div>

        <% if @current_video&.upload&.duration %>
          <span class="text-xs text-gray-300 bg-gray-700/50 px-2 sm:px-3 py-0.5 sm:py-1 rounded-full flex-shrink-0">
            <%= Time.at(@current_video.upload.duration).utc.strftime("%M:%S") %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="flex-1 p-3 sm:p-4 md:p-5 overflow-y-auto">
      <div class="rounded-lg shadow-md overflow-hidden mb-4 md:mb-6">
        <% if @current_video %>
        <video data-controller="dashboard--video-player" data-dashboard--video-player-target="video" data-lesson-id="<%= @current_lesson.id %>" class="w-full aspect-video object-cover" controls src="<%= @current_video.upload.cdn_url %>">
        </video>
        <% else %>
        <div class="aspect-video bg-gray-700 flex items-center justify-center">
          <p class="text-xs sm:text-sm md:text-base text-gray-400">Không có video cho bài học này</p>
        </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <div class="bg-gray-800/50 border border-gray-700 rounded-lg shadow-md p-3 sm:p-4 md:p-5 h-full hover:border-purple-500/50 transition-colors">
          <h3 class="text-sm md:text-base font-semibold mb-2 md:mb-3 flex items-center text-white">
            <svg class="w-3 h-3 md:w-4 md:h-4 text-purple-400 mr-1.5 md:mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span class="truncate">Tài liệu khóa học</span>
          </h3>
          <div class="space-y-2">
            <a href="#" class="block p-2 md:p-3 bg-gray-700 rounded-lg hover:bg-gray-600 hover:shadow-md transition duration-200">
              <div class="flex items-center justify-between">
                <span class="text-gray-200 truncate text-xs md:text-sm">Tài liệu bài giảng</span>
                <svg class="w-3 h-3 md:w-4 md:h-4 text-purple-400 flex-shrink-0 ml-1.5 md:ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
              </div>
            </a>
          </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700 rounded-lg shadow-md p-3 sm:p-4 md:p-5 h-full hover:border-purple-500/50 transition-colors">
          <h3 class="text-sm md:text-base font-semibold mb-2 md:mb-3 flex items-center text-white">
            <svg class="w-3 h-3 md:w-4 md:h-4 text-purple-400 mr-1.5 md:mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            <span class="truncate">Bài kiểm tra</span>
          </h3>
          <div class="space-y-2">
            <a href="#" class="block p-2 md:p-3 bg-gray-700 rounded-lg hover:bg-gray-600 hover:shadow-md transition duration-200">
              <div class="flex items-center justify-between">
                <span class="text-gray-200 truncate text-xs md:text-sm">Làm bài kiểm tra</span>
                <svg class="w-3 h-3 md:w-4 md:h-4 text-purple-400 flex-shrink-0 ml-1.5 md:ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="w-full lg:w-[35%] xl:w-[30%]">
    <div class="bg-gray-800 rounded-lg border border-gray-700 shadow-lg h-[calc(100vh-1rem)] sm:h-[calc(100vh-2rem)] overflow-hidden sticky top-2 sm:top-4">
      <div class="sticky top-0 bg-gray-800 border-b border-gray-700 z-10 flex items-center justify-between p-3 sm:p-4 md:p-5 rounded-t-lg">
        <h3 class="text-base sm:text-lg font-semibold text-white truncate">Nội dung khóa học</h3>
        <div class="flex items-center flex-shrink-0 ml-2">
          <div class="w-14 sm:w-16 md:w-20 bg-gray-700 rounded-full h-1.5 sm:h-2 mr-1 sm:mr-2">
            <div class="bg-purple-500 h-full rounded-full transition-all duration-300"
                 style="background-image: linear-gradient(to right, #9061f9, #a855f7); box-shadow: 0 0 10px rgba(168, 85, 247, 0.3);"
                 data-course-progress style="width: <%='80' %>%">
            </div>
          </div>
          <span class="text-xs text-gray-300 font-medium whitespace-nowrap" data-progress-text>
            <%= '4' %> / <%= 5 %>
          </span>
        </div>
      </div>

      <div class="overflow-y-auto h-[calc(100vh-3.5rem)] sm:h-[calc(100vh-5rem)] scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800" data-controller="dashboard--course-viewer">
        <div class="p-2 sm:p-3 space-y-2 sm:space-y-3 h-full">
          <% @course.chapters.each_with_index do |chapter, chapter_index| %>
            <div class="group collapse-group">
              <div class="collapse collapse-arrow bg-gray-800/50 border border-gray-700 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow max-w-full
                          <%= chapter.lessons.any? {|l| l.id == @current_lesson&.id} ? 'bg-gray-700/20 border-purple-500/30' : '' %>"
                   data-dashboard--course-viewer-target="chapter"
                   style="<%= chapter.lessons.any? {|l| l.id == @current_lesson&.id} ? 'border-color: rgba(168, 85, 247, 0.3);' : '' %>">
                <input type="checkbox" class="accent-purple-500"
                       <%= 'checked' if chapter_index == 0 || chapter.lessons.any? {|l| l.id == @current_lesson&.id} %>
                       data-action="dashboard--course-viewer#toggleChapter" />
                <div class="collapse-title text-white font-medium flex items-center p-2 sm:p-3 hover:bg-gray-700/30 active:bg-gray-700/50 transition-colors">
                  <div class="flex items-center min-w-0 pr-6 flex-grow">
                    <span class="truncate font-bold text-xs sm:text-sm group-hover:text-purple-300 transition-colors">
                      <span class="font-normal text-purple-400 mr-1.5">Chapter <%= chapter_index + 1 %>.</span>
                      <%= chapter.title %>
                    </span>
                  </div>
                  <span class="absolute right-8 text-[10px] sm:text-xs font-medium text-gray-400 px-1.5 sm:px-2 py-0.5 rounded-full bg-gray-700/50 border border-gray-600/30">
                    <%= chapter.lessons.count %> bài
                  </span>
                </div>
                <div class="collapse-content bg-gray-800/30 p-0 w-full overflow-hidden" style="padding-bottom:0px">
                  <% chapter.lessons.each_with_index do |lesson, lesson_index| %>
                    <div class="border-t border-gray-700/50 w-full">
                      <div class="collapse collapse-arrow bg-transparent w-full"
                           data-dashboard--course-viewer-target="lesson"
                           data-lesson-id="<%= lesson.id %>"
                          >
                        <input type="checkbox"
                               class="accent-purple-500"
                               <%= 'checked' if lesson.id == @current_lesson&.id %>
                               data-action="dashboard--course-viewer#toggleLesson" />
                        <div class="collapse-title text-gray-200 p-2 sm:p-3 pl-4 sm:pl-5 flex items-center 
                                   hover:bg-gray-700/30 transition-colors w-full">
                          <div class="flex items-center min-w-0 pr-6 flex-grow">
                            <div class="flex-shrink-0 flex items-center justify-center w-4 h-4 sm:w-5 sm:h-5 rounded-md bg-gray-700 mr-2">
                              <svg class="w-2.5 h-2.5 sm:w-3 sm:h-3 <%= lesson.id == @current_lesson&.id ? 'text-purple-400' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                            </div>
                            <span class="truncate font-medium text-[11px] sm:text-xs">
                              <span class="text-gray-500 mr-1.5"><%= lesson_index + 1 %>.</span>
                              <%= lesson.title %>
                            </span>
                          </div>
                          <% if lesson.videos.any? %>
                            <span class="absolute right-8 text-[9px] sm:text-[10px] font-medium bg-gray-700/50 text-gray-400 border border-gray-600/20 px-1 py-0.5 rounded">
                              <%= "#{lesson.videos.count} video" %>
                            </span>
                          <% end %>
                        </div>
                        <div class="collapse-content bg-gray-800/20 p-0 w-full" style="padding-bottom:0px">
                          <div class="border-l-2 border-gray-700/50 ml-6 sm:ml-7 space-y-0.5 py-1">
                            <% lesson.videos.order(position: :asc).each_with_index do |video, video_index| %>
                              <%= link_to dashboard_course_viewer_path(@course, lesson_id: lesson.id, video_id: video.id),
                                          data: {
                                            turbo_frame: "video_player",
                                            turbo: true,
                                            turbo_action: "advance",
                                            video_id: video.id,
                                            dashboard__course_viewer_target: "video",
                                            action: "click->dashboard--course-viewer#markVideoActive"
                                          },
                                          class: "block p-1.5 sm:p-2 hover:bg-gray-700/50 transition-colors w-full
                                                 #{@current_video&.id == video.id ? 'bg-purple-900/40 text-white' : 'text-gray-300'}" do %>
                                <div class="flex items-center justify-between w-full pl-2 sm:pl-3">
                                  <div class="flex items-center min-w-0 pr-1 flex-grow max-w-[90%]">
                                    <svg class="w-2.5 h-2.5 sm:w-3 sm:h-3 <%= @current_video&.id == video.id ? 'text-purple-400' : 'text-gray-400' %> mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="truncate max-w-full text-[10px] sm:text-xs <%= @current_video&.id == video.id ? 'font-medium' : '' %>" title="<%= video.title %>">
                                      <span class="text-gray-500 mr-1"><%= video_index + 1 %>.</span>
                                      <%= video.title %>
                                    </span>
                                  </div>
                                  <% if video.upload.duration %>
                                    <span class="text-[9px] sm:text-[10px] ml-1 flex-shrink-0 px-1 py-0.5 rounded-full bg-gray-700/70 whitespace-nowrap <%= @current_video&.id == video.id ? 'text-purple-200' : 'text-gray-400' %>">
                                      <%= Time.at(video.upload.duration).utc.strftime("%M:%S") %>
                                    </span>
                                  <% end %>
                                </div>
                              <% end %>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
