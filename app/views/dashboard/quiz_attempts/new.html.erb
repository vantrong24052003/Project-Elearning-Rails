<div class="container mx-auto px-4 py-8 bg-gray-900">
  <div class="mb-6">
    <div class="flex items-center gap-2 text-gray-400 mb-2">
      <%= link_to "Khóa học", dashboard_courses_path, class: "hover:text-purple-400 transition-colors" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <%= link_to @course.title, dashboard_course_path(@course), class: "hover:text-purple-400 transition-colors" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <%= link_to "Bài kiểm tra", dashboard_course_quizzes_path(@course), class: "hover:text-purple-400 transition-colors" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span class="text-gray-300">Làm bài kiểm tra</span>
    </div>

    <h1 class="text-3xl font-bold text-white mb-4">
      Bài kiểm tra: <%= @quiz.title %>
    </h1>
  </div>

  <div class="bg-gray-800 rounded-lg p-6 mb-8" data-controller="dashboard--quiz-timer">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-white">Thông tin bài kiểm tra</h2>
      <div class="flex items-center gap-4">
        <div class="px-4 py-2 bg-purple-600 text-white rounded-lg flex items-center" data-dashboard--quiz-timer-target="timer">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span data-dashboard--quiz-timer-target="display">
            <%= @quiz.time_limit %>:00
          </span>
          <input type="hidden" data-dashboard--quiz-timer-target="timeLimit" value="<%= @quiz.time_limit * 60 %>" />
          <input type="hidden" data-dashboard--quiz-timer-target="timeSpent" value="0" />
        </div>
      </div>
    </div>

    <%= form_with url: dashboard_course_quiz_quiz_attempts_path(@course, @quiz), method: :post, class: "space-y-8", data: { action: "submit->dashboard--quiz-timer#submitForm" } do |f| %>
      <%= f.hidden_field :time_spent, data: { dashboard--quiz_timer_target: "timeSpentInput" }, value: 0 %>

      <div class="space-y-6">
        <% @questions.each_with_index do |question, index| %>
          <div class="p-5 border border-gray-700 rounded-lg">
            <div class="flex items-start gap-4 mb-4">
              <div class="flex items-center justify-center w-8 h-8 rounded-full bg-purple-600 text-white flex-shrink-0">
                <%= index + 1 %>
              </div>
              <div class="w-full">
                <h3 class="text-white text-lg mb-4"><%= question.content %></h3>

                <div class="space-y-3">
                  <% question.options.each_with_index do |option, opt_index| %>
                    <div class="flex items-center">
                      <input type="radio" name="answers[<%= question.id %>]" id="answers_<%= question.id %>_<%= opt_index %>" value="<%= opt_index %>" class="w-4 h-4 text-purple-600 bg-gray-700 border-gray-600 focus:ring-purple-500 focus:ring-2">
                      <label for="answers_<%= question.id %>_<%= opt_index %>" class="ml-3 text-gray-300 block w-full p-3 rounded-lg border border-gray-700 hover:bg-gray-700 cursor-pointer transition-colors">
                        <%= option %>
                      </label>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="pt-6 border-t border-gray-700 flex justify-end">
        <%= f.submit "Nộp bài", class: "px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors", data: { dashboard--quiz_timer_target: "submitButton" } %>
      </div>
    <% end %>
  </div>
</div>
