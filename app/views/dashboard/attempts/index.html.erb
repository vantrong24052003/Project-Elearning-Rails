<div class="container mx-auto px-4 py-8 bg-gray-900">
  <div class="mb-6">
    <div class="flex items-center gap-2 text-gray-400 mb-2">
      <%= link_to "Khóa học", dashboard_courses_path, class: "hover:text-purple-400 transition-colors" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <%= link_to @course.title, dashboard_course_path(@course), class: "hover:text-purple-400 transition-colors" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <%= link_to "Bài kiểm tra", dashboard_course_quizzes_path(@course), class: "hover:text-purple-400 transition-colors" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
      <span class="text-gray-300">Lịch sử làm bài</span>
    </div>

    <h1 class="text-3xl font-bold text-white mb-4">
      Lịch sử làm bài - <%= @quiz.title %>
    </h1>
  </div>

  <div class="bg-gray-800 rounded-lg overflow-hidden">
    <% if @attempts.any? %>
      <div class="overflow-x-auto">
        <table class="w-full text-left text-gray-300">
          <thead class="bg-gray-700 text-gray-200 uppercase text-sm">
            <tr>
              <th class="px-6 py-4">Lần thử</th>
              <th class="px-6 py-4">Điểm số</th>
              <th class="px-6 py-4">Thời gian làm</th>
              <th class="px-6 py-4">Ngày thực hiện</th>
              <th class="px-6 py-4">Hành động</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @attempts.each_with_index do |attempt, index| %>
              <tr class="hover:bg-gray-700">
                <td class="px-6 py-4">Lần #<%= @attempts.count - index %></td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 rounded-full text-sm font-medium
                    <%= if attempt.score >= 70
                          'bg-green-900/50 text-green-300'
                        elsif attempt.score >= 40
                          'bg-yellow-900/50 text-yellow-300'
                        else
                          'bg-red-900/50 text-red-300'
                        end
                    %>">
                    <%= attempt.score %>%
                  </span>
                </td>
                <td class="px-6 py-4">
                  <%= Time.at(attempt.time_spent).utc.strftime("%H:%M:%S") %>
                </td>
                <td class="px-6 py-4">
                  <%= attempt.created_at.strftime("%d/%m/%Y %H:%M") %>
                </td>
                <td class="px-6 py-4">
                  <%= link_to dashboard_course_quiz_attempt_path(@course, @quiz, attempt), class: "text-purple-400 hover:text-purple-300 font-medium mr-4" do %>
                    Xem chi tiết
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="p-8 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <h3 class="text-xl font-semibold text-white mb-2">Chưa có lần làm bài nào</h3>
        <p class="text-gray-400">Bạn chưa thực hiện bài kiểm tra này.</p>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <%= link_to dashboard_course_quiz_path(@course, @quiz), class: "inline-flex items-center text-gray-400 hover:text-purple-400 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
      </svg>
      Quay lại bài kiểm tra
    <% end %>
  </div>
</div>
